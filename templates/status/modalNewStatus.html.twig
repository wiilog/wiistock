<form method="" class="modal fade" id="modalNewStatus" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Créer un statut</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body modal-input container-fluid">
                <div class="row">
                    <div class="mb-3 form-group col-12">
                        <label for="category">Catégorie*</label>
                        <select name="category" id="category" class="data form-control needed" onchange="hideOptionOnChange($(this))">
                            {% if categories|length > 1 %}
                                <option disabled value="" selected></option>
                            {% endif %}
                            {% for category in categories %}
                                <option value="{{ category.id }}">{{ category.nom }}</option>
                            {% endfor %}
                        </select>
                    </div>

                    <div class="mb-3 form-group col-12">
                        <label for="label">Label*</label>
                        <input type="text" class="data form-control needed" name="label">
                    </div>

                    <div class="form-group col-12">
                        <label for="label">Commentaire</label>
                        <input type="text" class="data form-control" name="description">
                    </div>

                    <div class="col-12 form-group">
                        <label>Statut de type 'traité' ?</label>
                        <label class="switch">
                            <input class="checkbox" type="checkbox" name="treated">
                            <span class="slider round"></span>
                        </label>
                    </div>

                    <div class="col-12 form-group send-mail-user">
                        <label>Envoi de mails aux acheteurs ?</label>
                        <label class="switch">
                            <input class="checkbox" type="checkbox" name="sendMails">
                            <span class="slider round"></span>
                        </label>
                    </div>
                    <div class="col-12 form-group">
                        <label>Envoi de mails au déclarant ?</label>
                        <label class="switch">
                            <input class="checkbox" type="checkbox" name="sendMailsDeclarant">
                            <span class="slider round"></span>
                        </label>
                    </div>
                    <div class="form-group col-3">
                        <label for="label">Ordre</label>
                        <input type="number" class="data form-control" name="displayOrder" min="1">
                    </div>
                </div>
            </div>
            <div class="error-msg p-4"></div>
            <div class="modal-footer">
                <button type="button" class="btn" data-dismiss="modal">Annuler</button>
                <button id="submitNewStatus" type="button" class="btn btn-success">Enregistrer</button>

                <input hidden id="acheminementTranslation" value="{{ 'acheminement.acheminements'|trans }}">
            </div>
        </div>
    </div>
</form>
