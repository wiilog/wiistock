<div class="d-flex">
    <div class="dropdown dropright">
        {% include 'datatable/dotsRow.html.twig' %}
        <div class="dropdown-menu dropdown-follow-gt pointer">
            {% if hasRight(constant('App\\Entity\\Menu::STOCK'), constant('App\\Entity\\Action::EDIT')) %}
                <div class="d-none">
                    <div class="btn btn-col-action action-on-click" data-id='{{ id }}' data-target='#modalEditArticleFournisseur' data-toggle='modal'
                         onclick="editRow($(this), Routing.generate('article_fournisseur_api_edit', true), $('#modalEditArticleFournisseur'), $('#submitEditArticleFournisseur'), clearModal('#modalEditArticleFournisseur'))">
                        <i class='fas fa-pencil-alt'></i>
                    </div>
                </div>
            {% endif %}
            {% if hasRight(constant('App\\Entity\\Menu::STOCK'), constant('App\\Entity\\Action::DELETE')) %}
                <div class="dropdown-item d-flex align-items-center" data-id="{{ id }}" data-target='#modalDeleteArticleFournisseur' data-toggle='modal'
                     onclick="deleteRow($(this), $('#modalDeleteArticleFournisseur'), $('#submitDeleteArticleFournisseur'))">
                    <span class="wii-icon wii-icon-trash-black mr-2"></span>Supprimer
                </div>
            {% endif %}
        </div>
    </div>
</div>
