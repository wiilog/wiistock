<input type="hidden"
       class="data"
       name="id"
       value="{{ articleFournisseur.id }}"/>
<div class="form-group">
    <label class="wii-field-name" for="reference">
        Référence
    </label>
    <input type="text"
           id="reference"
           class="form-control data"
           name="reference"
           value="{{ articleFournisseur.reference }}"
           disabled>
</div>

<div class="form-group w-100">
    <label class="wii-field-name" for="article-fournisseur-label">
        Libellé
    </label>
    <input type="text"
           id="article-fournisseur-label"
           class="form-control data"
           name="label"
           value="{{ articleFournisseur.label}}" />
</div>

<div class="form-group w-100">
    <label class="wii-field-name" for="fournisseur">
        Code Fournisseur*
    </label>
    <select class="form-control data ajax-autocomplete-fournisseur-edit needed"
            name="fournisseur"
            id="fournisseur">
       <option value="{{articleFournisseur.fournisseur.id}}">
           {{articleFournisseur.fournisseur.codeReference}}
       </option>
    </select>
</div>

<div class="form-group w-100">
    <label class="wii-field-name" for="article-reference">
        Article de référence*
    </label>
    <select class="form-control ajax-autocomplete-edit data needed"
            name="article-reference"
            id="article-reference">
        <option value="{{ articleFournisseur.referenceArticle.id }}">
            {{ articleFournisseur.referenceArticle.reference }}
        </option>
    </select>
</div>
