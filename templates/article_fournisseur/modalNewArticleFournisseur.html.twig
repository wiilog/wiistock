<form method="" class="modal fade" id="modalNewArticleFournisseur" role="dialog" aria-labelledby="dataModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            {% include 'utils/modal/header.html.twig' with {
                title: "Nouvel article fournissseur"
            } %}

            <div class="modal-body modal-input container-fluid">

                <div class="form-group">
                    <label for="reference">Référence*</label>
                    <input type="text" id="reference" class="form-control data needed" name="reference">
                </div>

            <div class="form-group">
                <label for="label">Libellé</label>
                <input type="text" id="label" class="form-control data" name="label">
            </div>

                <div class="form-group w-100">
                    <label for="fournisseur">Code Fournisseur*</label>
                    <select class="form-control data ajax-autocomplete-fournisseur needed" name="fournisseur" id="fournisseur">
                    </select>
                </div>

                <div class="form-group w-100">
                    <label for="article-reference">Article de référence*</label>
                    <select class="form-control data ajax-autocomplete needed" name="article-reference" id="article-reference">
                    </select>
                </div>

            </div>

            {% include 'utils/modal/footer.html.twig' with {
                elements:
                [
                    {classes: 'btn btn-outline-secondary', dismiss: true, text: 'Annuler'},
                    {classes: 'btn btn-success', id: 'submitNewArticleFournisseur', text: 'Enregistrer'}
                ],
            } %}

        </div>
    </div>
</form>
