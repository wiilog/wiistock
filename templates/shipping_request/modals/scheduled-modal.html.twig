{% import 'form.html.twig' as macro %}

<div class="modal fade" role="dialog" id="modalScheduledShippingRequest" data-modal-type="new">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            {% include 'utils/modal/header.html.twig' with {
                title: "Planifier le transport"
            } %}

            <div class="modal-body flex flex-column">
                <div class="flex flex-column">
                    <div class="wii-section-title py-1">
                        <i class="wii-icon wii-icon-info wii-icon-15px-primary mr-2"></i>
                        Informations
                    </div>
                    <div class="row my-3">
                        <div class="form-group col-md-6 col-12">
                            {{ macro.input("packCount", "Nombre de colis", false) }}
                        </div>
                        <div class="form-group col-md-6 col-12">
                            {{ macro.input("grossWeight", "Poids brut (Kg)", false) }}
                        </div>
                    </div>
                </div>

                <div class="flex flex-column">
                    <div class="wii-section-title py-1">
                        <i class="wii-icon wii-icon-delivery wii-icon-15px-primary mr-2"></i>
                        Transporteur
                    </div>
                    <div class="row my-3">
                        <div class="form-group col-md-6 col-12">
                            {{ macro.select("transporteur", "Nom transporteur", false, {items:transporteurs}) }}
                        </div>
                        <div class="form-group col-md-6 col-12">
                            {{ macro.input("trackingNumber", "Numéro de tracking", false) }}
                        </div>
                        <div class="form-group col-md-6 col-12">
                            {{ macro.input("expectedPicketAt", "Date d'enlèvement", false,'', {type:'date'} ) }}
                        </div>
                    </div>
                </div>
            </div>

            {% include 'utils/modal/footer.html.twig' with {
                elements: [
                    {classes: 'btn btn-outline-secondary', dismiss: true, text: 'Annuler'},
                    {classes: 'btn btn-success', text: 'Valider le transport',id:'submitScheduledShippingRequest',type:'submit',data:{"shippingRequestId":shipping.id}},
                ],
                hideErrorContainer: true,
            } %}

        </div>
    </div>
</div>
