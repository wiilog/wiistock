<html lang="fr">
<head>
    <title>Bon de surconsommation</title>
    <meta charset="UTF-8"/>
    <style>
        html, body {
            width: 100%;
            height: 100%;
        }

        * {
            font-family: Arial, sans-serif;
        }

        .content {
            display: block;
            width: 34.4cm;
        }

        .bordered {
            position: relative;
            border: 2px solid black;
            margin: 5mm 0;
            padding: 5mm;
        }

        .right-codes {
            position: absolute;
            top: 0;
            right: 0;
            bottom: 0;
            padding: 5mm;
            width: 3.5cm;
        }

        .half {
            width: 35%;
            margin-right: 50px;
            float: left;
        }

        .qr {
            display: table;
            text-align: center;
            height: 2cm;
            width: 100%;
        }

        .qr .label {
            white-space: nowrap;
        }

        .qr .barcode {
            text-align: center;
            display: table-row;
        }

        .qr .barcode svg {
            height: 100%;
            max-width: 100%;
        }

        .clear-float {
            content: " ";
            display: block;
            height: 0;
            clear: both;
        }

        table.packs {
            width: 100%;
            border-collapse: collapse;
        }

        table.packs thead th, table.packs thead td table.packs tbody th, table.packs tbody td {
            border: 2px solid black;
            text-align: center;
            padding: 5mm;
        }

        tr, td, th, tbody, thead, tfoot {
            page-break-inside: avoid !important;
        }

        thead {
            display: table-header-group;
        }

        .header td {
            padding: 2mm;
        }
    </style>
</head>
<body>
<div class="content">
    <div class="header bordered">
        <h2>Caractéristiques de la demande</h2>
        <table class="half">
            <tr>
                <td><b>N° de demande</b></td>
                <td>{{ dispatch.number }}</td>
            </tr>
            <tr>
                <td><b>Ligne de dépose</b></td>
                <td>{{ dispatch.locationTo ? dispatch.locationTo.label }}</td>
            </tr>
            <tr>
                <td><b>Date de validation</b></td>
                <td>{{ dispatch.validationDate ? dispatch.validationDate | date('d/m/Y H:i:s') }}</td>
            </tr>
            <tr>
                <td><b>Faite par</b></td>
                <td>{{ dispatch.requester ? dispatch.requester.username }}</td>
            </tr>
        </table>
        <table class="half m-0 p-0">
            {% for key, freeField in freeFields %}
                {% if key == 'flow' and freeField is not empty %}
                    <tr>
                        <td><b>Flux</b></td>
                        <td>{{ freeField }}</td>
                    </tr>
                {% endif %}
                {% if key == 'requestType' and freeField is not empty %}
                    <tr>
                        <td><b>Type de demande</b></td>
                        <td>{{ freeField }}</td>
                    </tr>
                {% endif %}
            {% endfor %}
        </table>

        <div class="right-codes">
            <div class="qr" style="margin-bottom: 5mm">
                <div class="barcode">
                    {{ printBarcode({
                        code: dispatch.number,
                        type: 'qrcode',
                        format: 'svg',
                        height: 200,
                        width: 200
                    }) | raw }}
                </div>
                <span class="label">N° de demande</span>
            </div>
            {% if dispatch.locationTo %}
                <div class="qr">
                    <div class="barcode">
                        {{ printBarcode({
                            code: dispatch.locationTo.label,
                            type: 'qrcode',
                            format: 'svg',
                            height: 200,
                            width: 200
                        }) | raw }}
                    </div>
                    <span class="label">Ligne dépose</span>
                </div>
            {% endif %}
        </div>

        <div class="clear-float"></div>
    </div>

    <table class="packs">
        <thead>
        <tr>
            <th style="width: 10%;">PN</th>
            <th style="width: 20%;">Code Barre</th>
            <th style="width: 5%;">Qté demandée</th>
            <th style="width: 10%;">Nature</th>
            <th style="width: 5%;">Qté livrée</th>
            <th style="width: 15%;">Emplacement</th>
            <th style="width: 20%">N° lot / Cure date / N°EASA si besoin / Commentaire</th>
        </tr>
        </thead>
        {% for pack in dispatch.dispatchPacks %}
            <tr>
                <td>{{ pack.pack.code }}</td>
                <td>
                    <div class="qr">
                        <div class="barcode">
                            {{ printBarcode({
                                code: pack.pack.code,
                                type: 'c128',
                                format: 'svg',
                                height: 60,
                                width: 1
                            }) | raw }}
                        </div>
                    </div>
                </td>
                <td>{{ pack.quantity }}</td>
                <td>{{ pack.pack.nature.label }}</td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
        {% endfor %}
    </table>
</div>
</body>
</html>
