{% set modalTitle = (
    type == 'validate-preparation' ? 'Valider la préparation' :
    (type == 'delete-delivery' ? 'Supprimer la livraison')
) %}
{% set selectLabel = (
    type == 'validate-preparation' ? 'Emplacement de préparation' :
    (type == 'delete-delivery' ? 'Emplacement de dépose des articles')
) %}
{% set submitLabel = (
    type == 'validate-preparation' ? 'Valider' :
    (type == 'delete-delivery' ? 'Valider la suppression')
) %}
{% set submitColor = (
    type == 'validate-preparation' ? 'btn-success' :
    (type == 'delete-delivery' ? 'btn-danger')
) %}

<div class="modal fade"
     id="modal-select-location"
     role="dialog"
     aria-hidden="true"
     data-keyboard="false"
     data-backdrop="static">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            {% include 'utils/modal/header.html.twig' with {
                title: modalTitle
            } %}

            <div class="modal-body">
                <div class="row">
                    <label class="col-12" for="select-location-select">{{ selectLabel }}</label>
                    <div class="col-12">
                        <select class="data form-control select2 w-100 needed"
                                required
                                name="location"
                                id="select-location-select">
                        </select>
                    </div>
                </div>
            </div>
            {% include 'utils/modal/footer.html.twig' with {
                elements: [
                    {classes: 'btn btn-outline-secondary', dismiss: true, text: 'Annuler'},
                    {classes: 'btn ' ~ submitColor, text: submitLabel , type: 'submit'}
                ],
                hideErrorContainer: true,
            } %}

        </div>
    </div>
</div>
