<div class="d-flex">
    <div class="dropdown dropright">
        {% include 'datatable/dotsRow.html.twig' %}
        <div class="dropdown-menu dropdown-follow-gt pointer">
            {% if hasRight(constant('App\\Entity\\Menu::REFERENTIEL'), constant('App\\Entity\\Action::EDIT')) %}
                <div class="d-none">
                    <div class="action-on-click" data-id='{{ emplacementId }}' data-toggle='modal' data-target='#modalEditEmplacement'
                         onclick="editRow($(this), Routing.generate('emplacement_api_edit', true), $('#modalEditEmplacement'), $('#submitEditEmplacement'))">
                        <i class='fas fa-pencil-alt'></i>
                    </div>
                </div>
            {% endif %}
            <a class="dropdown-item d-flex align-items-center"
               href="{{ path('print_single_location_bar_code', {location: emplacementId}) }}">
                <span class="wii-icon wii-icon-printer-black mr-2"></span>Imprimer
            </a>
            {% if hasPairing
                and hasRight(constant('App\\Entity\\Menu::IOT'), constant('App\\Entity\\Action::DISPLAY_SENSOR')) %}
                <a class="dropdown-item"
                   href="{{ path('show_data_history', {id: emplacementId, type: constant('App\\Entity\\IOT\\Sensor::LOCATION')}) }}">
                    <span class="wii-icon wii-icon-pairing"></span>
                    Historique des donn√©es
                </a>
            {% endif %}
            {% if hasRight(constant('App\\Entity\\Menu::REFERENTIEL'), constant('App\\Entity\\Action::DELETE')) %}
                <div class="dropdown-item d-flex align-items-center"
                     onclick="checkAndDeleteRowEmplacement($(this))"
                     data-id='{{ emplacementId }}'
                     data-target='#modalDeleteEmplacement'
                     data-toggle='modal'>
                    <span class="wii-icon wii-icon-trash-black mr-2"></span></i>Supprimer
                </div>
            {% endif %}
        </div>
    </div>
</div>
