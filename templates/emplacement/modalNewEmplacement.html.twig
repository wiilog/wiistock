<form method="" class="modal fade" id="modalNewEmplacement" role="dialog"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Nouvel emplacement</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body modal-input container-fluid">
                <div class="form-group">
                    <label for="label">Nom*</label>
                    <input type="text" id="Label" class="form-control data needed is-barcode" name="Label" maxlength="21"/>
                </div>

                <div class="form-group">
                    <label for="Description">Description*</label>
                    <input type="text" id="Description" class="form-control data needed" name="Description">
                </div>

                <div class="form-group">
                    <label for="Description">Délais Traça HH:MM</label>
                    <input type="text" id="dateMaxTime" class="form-control data" name="dateMaxTime">
                </div>

                <div class="form-group">
                    <label for="Description">Natures de colis autorisées</label>
                    <select name="allowed-natures" class="form-control data select2 w-100" multiple>
                        {% for nature in natures %}
                            <option value="{{ nature.id }}">{{ nature.label }}</option>
                        {% endfor %}
                    </select>
                </div>

                <div class="form-group">
                    <label for="Description">Point de livraison ? </label>
                    <label class="switch">
                        <input class="checkbox form-control data" type="checkbox" name="isDeliveryPoint">
                        <span class="slider round"></span>
                    </label>
                </div>
            </div>
            <div class="error-msg p-4"></div>
            <div class="modal-footer">
                <button type="button" class="btn" data-dismiss="modal">Annuler</button>
                <div id="submitNewEmplacement" class="btn btn-success">Enregistrer</div>
            </div>
        </div>
    </div>
</form>
