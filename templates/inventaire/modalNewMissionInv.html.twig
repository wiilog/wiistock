<div class="modal fade" id="modalNewMission" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            {% include 'utils/modal/header.html.twig' with {
                title: "Ajouter une mission"
            } %}

            <div class="modal-body modal-input container-fluid">
                <div class="row">
                    <div class="form-group col-12">
                        <label class="wii-field-name">Libellé*</label>
                        <input type="text" class="form-control data needed" name="name">
                    </div>

                    <div class="mb-3 form-group col-12">
                        <label class="wii-field-name">Date prévue de début*</label>
                        <input type="date" class="data form-control needed" name="startDate">
                    </div>

                    <div class="mb-3 form-group col-12">
                        <label class="wii-field-name">Date prévue de fin*</label>
                        <input type="date" class="data form-control needed" name="endDate">
                    </div>

                    <div class="form-group col-12">
                        <label class="wii-field-name">Description</label>
                        <input type="text" class="form-control data" name="description">
                    </div>

                    <div class="form-group col-12">
                        <label class="wii-field-name">Type de mission*</label>
                        <div class='wii-switch needed w-100'>
                            <input type='radio' class='data w-50 justify-content-center' name='typeQuantity' value='0' content='Mission quantité article' required>
                            <input type='radio' class='data w-50 justify-content-center' name='typeLocation' value='1' content='Article sur emplacement' required checked>
                        </div>
                    </div>
                </div>
            </div>
            {% include 'utils/modal/footer.html.twig' with {
                elements: [
                    {classes: 'btn btn-outline-secondary', dismiss: true, text: 'Annuler'},
                    {classes: 'btn btn-success', text: 'Enregistrer', id: 'submitNewMission'}
                ],
            } %}

        </div>
    </div>
</div>
