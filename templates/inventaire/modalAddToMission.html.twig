<form method="" class="modal fade" id="modalAddToMission" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Ajouter des références et des articles</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <input type="text" class="data" value="{{ missionId }}" name="missionId" hidden>
            <div class="modal-body modal-input container-fluid">
                <label for="">Codes barre articles/références : </label>
                <input type="text" name="articles" class="form-control data">
            </div>

            <div class="error-msg"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                <button id="submitAddToMission" type="button" class="btn btn-primary">Enregistrer</button>
            </div>
        </div>
    </div>
</form>
