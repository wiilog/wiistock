<form method="" class="modal fade" id="modalAddToMission" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            {% include 'utils/modal/header.html.twig' with {
                title: "Ajouter des références et des articles"
            } %}

            <input type="text" class="data" value="{{ missionId }}" name="missionId" hidden>
            <div class="modal-body modal-input container-fluid">
                <label for="">Codes barre articles/références : </label>
                <input type="text" name="articles" class="form-control data">
            </div>

            <div class="error-msg"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Annuler</button>
                <button id="submitAddToMission" type="button" class="btn btn-success">Enregistrer</button>
            </div>
        </div>
    </div>
</form>
