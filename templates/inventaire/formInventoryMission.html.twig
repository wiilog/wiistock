{% import 'form.html.twig' as form %}

<div class="row">
    {{ form.input('duplicatedMission', '', false, mission.id, {
        type: 'hidden',
    }) }}
    <div class="form-group col-12">
        {{ form.input('name', 'Libellé', true, mission.name ? mission.name ~ '- copie', {
            type: 'text',
        }) }}
    </div>
    <div class="mb-3 form-group col-12">
        {{ form.input('startDate', 'Date prévue de début', true, mission.startPrevDate ? mission.startPrevdate|date('Y-m-d'), {
            type: 'date',
        }) }}
    </div>
    <div class="mb-3 form-group col-12">
        {{ form.input('endDate', 'Date prévue de fin', true, mission.endPrevDate ? mission.endPrevDate|date('Y-m-d'), {
            type: 'date',
        }) }}
    </div>
    <div class="form-group col-12">
        {{ form.input('description', 'Description', true, mission.description, {
            type: 'text',
        }) }}
    </div>
    <div class="form-group col-12">
        {{ form.switch('missionType', 'Type de mission', true, [
            {label: 'Mission quantité article', value: 'article', checked: mission.type ? true : mission.type == 'location' ? false : true, disabled : mission.id },
            {label: 'Article sur emplacement', value: 'location', checked: mission.type == 'location' ? true : false, disabled : mission.id }
        ]) }}
    </div>
    <div class="form-group col-12">
        {{ form.select('requester', 'Demandeur', true, {
            type: 'user',
            items: {
                (app.user.id): (app.user.username),
            }
        }) }}
    </div>
</div>
