<div class="d-flex">
    <div class="dropdown dropright">
        {{ include('datatable/dotsRow.html.twig') }}
        <div class="dropdown-menu dropdown-follow-gt pointer">
            {% if hasRight(constant('App\\Entity\\Menu::REFERENTIEL'), constant('App\\Entity\\Action::EDIT')) %}
                <div class="d-none">
                    <div class="action-on-click"
                         data-toggle="modal"
                         data-target="#modalEditLocationGroup"
                         data-id="{{ group.id }}"
                         onclick="editRow($(this), Routing.generate('location_group_edit_api', true), $('#modalEditLocationGroup'), $('#submitEditLocationGroup'))">
                        <i class="fas fa-trash mr-2"></i>Supprime
                    </div>
                </div>
            {% endif %}
            {% if hasRight(constant('App\\Entity\\Menu::REFERENTIEL'), constant('App\\Entity\\Action::DELETE')) %}
                <div class="dropdown-item"
                     data-toggle="modal"
                     data-target="#modalDeleteLocationGroup"
                     data-id="{{ group.id }}"
                     onclick="editRow($(this), Routing.generate('location_group_delete_api', true), $('#modalDeleteLocationGroup'), $('#submitDeleteLocationGroup'))">
                    <i class="fas fa-trash mr-2"></i>Supprimer
                </div>
            {% endif %}
        </div>
    </div>
</div>
