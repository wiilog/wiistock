<div class="modal fade" id="edit-row-modal" tabindex="-1" role="dialog" aria-labelledby="edit-row-label" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            {% include('utils/modal/header.html.twig') with {
                title: "Modifier la ligne"
            } %}

            <div class="modal-body">
                <div class="row">
                    {% for columns in range(1, 6) %}
                        <div class="dashboard-row-selector" data-columns="{{ columns }}">
                            {{ columns }} colonne{{ columns != 1 ? 's' }}
                            <div class="d-flex">
                                {% for i in range(1, columns) %}
                                    <div class="dashboard-example"></div>
                                {% endfor %}
                            </div>
                        </div>
                    {% endfor %}
                </div>

                <input type="hidden" name="new-row-columns-count">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Fermer</button>
                <button type="submit" class="btn btn-success" data-dismiss="modal">Valider</button>
            </div>
        </div>
    </div>
</div>
