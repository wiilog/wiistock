<div class="modal fade" id="add-dashboard-modal" tabindex="-1" role="dialog" aria-labelledby="add-dashboard-label" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            {% include 'utils/modal/header.html.twig' with {
                title: "Ajouter un dashboard"
            } %}

            <div class="modal-body">
                <div class="form-group">
                    <label for="add-dashboard-name" class="form-control-label wii-field-name">Nom du dashboard*</label>
                    <input type="text" id="add-dashboard-name" name="add-dashboard-name" class="form-control">
                </div>
            </div>
            {% include 'utils/modal/footer.html.twig' with {
                elements: [
                    {classes: 'btn btn-outline-secondary', dismiss: true, text: 'Fermer'},
                    {classes: 'btn btn-success add-dashboard-modal-submit', text: 'Ajouter'}
                ],
                hideErrorContainer: true,
            } %}

        </div>
    </div>
</div>
