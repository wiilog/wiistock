{% extends 'dashboard/component_type/content/base_form.html.twig' %}

{% block content %}
    <div class="row">
        <div class="form-group col-12">
            <label class="wii-field-name">Choix des emplacements*</label>
            <select class="ajax-autocomplete-location data form-control w-100 needed"
                    name="locations"
                    multiple
                    title="Emplacements">
                {% for location in values.locations %}
                    <option value="{{ location.id }}" selected>{{ location.label }}</option>
                {% endfor %}
            </select>
        </div>
    </div>

    <div class="row form-group align-items-center">
        <div class="col-auto">
            <label class="switch">
                <input class="checkbox"
                       type="checkbox"
                       name="withTreatmentDelay"
                       {{ values.withTreatmentDelay ?? false ? 'checked' }}>
                <span class="slider round"></span>
            </label>
        </div>
        <div class="col">
            <span class="wii-field-text">Afficher le delai de traitement (Les emplacements choisis doivent avoir un délai de paramétré)
            </span>
        </div>
    </div>

    <div class="row form-group align-items-center">
        <div class="col-auto">
            <label class="switch">
                <input class="checkbox"
                       type="checkbox"
                       name="withLocationLabels"
                       {{ values.withLocationLabels ?? false ? 'checked' }}/>
                <span class="slider round"></span>
            </label>
        </div>
        <div class="col">
            <span class="wii-field-text">Afficher le nom des emplacements paramétrés sous le titre</span>
        </div>
    </div>

    <div class="row form-group align-items-center">
        <div class="col-auto">
            <label class="switch">
                <input class="checkbox"
                       type="checkbox"
                       name="redirect"
                       {{ values.redirect ?? false ? 'checked' }}/>
                <span class="slider round"></span>
            </label>
        </div>
        <div class="col">
            <span class="wii-field-text">Rediriger au clic vers la page Encours</span>
        </div>
    </div>
    <div class="row form-group align-items-center">
        <div class="col-auto">
            <label class="switch">
                <input class="checkbox"
                       type="checkbox"
                       name="emergency"
                       {{ values.emergency ?? false ? 'checked' }}/>
                <span class="slider round"></span>
            </label>
        </div>
        <div class="col">
            <span class="wii-field-text">Afficher en urgence</span>
        </div>
    </div>
{% endblock %}
