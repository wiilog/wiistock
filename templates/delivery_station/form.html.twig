{% extends 'delivery_station/layout.thml.twig' %}
{% import 'form.html.twig' as form %}

{% block title %} Caisse automatique | Formulaire {% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('delivery-station') }}
{% endblock %}

{% block page_content %}
    <div class="main-page-container">
        <div>
            <div class="timeline-container">
                <span class="wii-field-text current">Choix de la référence</span>
                <span class="wii-field-text future">Choix de la quantité</span>
                <span class="wii-field-text future">Autres informations</span>
                <span class="future wii-field-text future">Récapitulatif</span>
            </div>
            <div class="form-content">
                <div class="stock-exit-container">
                    <div class="reference-choice-container active">
                        <div class="">
                            <label>
                                Champ libre 1
                                <select class="form-control"></select>
                            </label>
                            <label>
                                Champ libre 2
                                <select class="form-control"></select>
                            </label>
                            <label>
                                Champ libre 3
                                <select class="form-control"></select>
                            </label>
                        </div>
                        <div class="mt-5">
                            {{ form.select('reference', 'Référence ou libellé ou Référence founisseur ou Code barre', false, {
                                type: 'reference',
                                inputClass: 'w-50',
                                labelClass: 'w-100',
                                includeParams: '[name=freeField1],[name=freeField2],[name=freeField3]',
                                includeParamsParent: '.reference-choice-container',
                            }) }}
                        </div>
                    </div>
                    <div class="quantity-choice-container d-none">
                        <div class="row">
                            <div class="reference-informations col-5 d-flex">
                                <img class="image mr-3"
                                     alt="Image référence"
                                     width="150px"
                                     style="
                                         background-image: url('{{ asset('svg/reference_article/product.svg') }}');
                                         background-color: #F5F5F7;
                                         background-size: 50%;
                                         background-repeat: no-repeat;
                                         background-position: center"
                                >

                                <div class="d-flex flex-column justify-content-around py-2">
                                    <div class="wii-field-name">
                                        <strong>Référence:</strong>
                                        <span class="reference wii-field-text"></span>
                                    </div>
                                    <div class="wii-field-name">Libellé:
                                        <span class="label wii-field-text"></span>
                                    </div>
                                    <div class="wii-field-name">Quantité disponible:
                                        <span class="quantity wii-field-text"></span>
                                    </div>
                                    <div class="wii-field-name">Code fournisseur:
                                        <span class="supplierCode wii-field-text"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-1 d-flex align-items-start justify-content-end">
                                <img src="{{ asset('svg/reference_article/location.svg') }}" width="50px">
                            </div>
                            <div class="col-6">
                                <div class="d-flex align-items-center">
                                    <div class="bold wii-field-name">Emplacement:
                                        <span class="location"></span>
                                    </div>
                                </div>
                                <div class="mt-5">
                                    {{ form.input('barcode', 'Veuillez scanner le code barre', false, null, {
                                        type: 'search',
                                        labelClass: 'w-100',
                                    }) }}
                                </div>
                                <div class="mt-2">
                                    {{ form.input('pickedQuantity', 'Quantité prise', false, null, {
                                        type: 'search',
                                        labelWidth: '100%',
                                        width: 0,
                                        inputClass: 'w-50',
                                    }) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="other-informations-container d-none">
                    </div>
                    <div class="summary-container d-none">
                    </div>
                    <div class="d-flex flex-row-reverse mt-5">
                        <button class="button-next" data-loader-size="normal">
                            Suivant
                        </button>
                    </div>
                    <div class="d-none justify-content-between summary-button-container mt-5">
                        <button class="outline danger give-up-button">
                            Abandonner
                        </button>
                        <div>
                            <button class="outline edit-stock-entry-button">
                                Modifier
                            </button>
                            <button class="validate-stock-entry-button" data-loader-size="normal">
                                Valider
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="corner position-absolute left-0 bottom-0 p-4 give-up-button-container">
            <button class="outline return-or-give-up-button">
                Retour
            </button>
        </div>
    </div>
    <div class="success-page-container d-none">
        {% include 'utils/modal-alert/success-bookmark.html.twig' %}
        <div class="ref-entry-stock-success text-center d-none">
            <span class="field-success-page"></span>
        </div>
        <div class="article-entry-stock-success text-center d-none">
            <span class="field-success-page"></span>
        </div>
        <div class="d-flex justify-content-center redirect-button-container">
            <button class="outline print-again-button" data-loader-size="normal">
                Réimprimer
            </button>
            <button class="go-home-button">
                Accueil
            </button>
        </div>
    </div>
    <div class="corner position-absolute right-0 bottom-0 p-4" id="information-button">
        <img src="{{ asset('svg/question-mark.svg') }}" height="45px">
    </div>

    {% include 'delivery_station/modalGiveUpStockExit.html.twig' %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('delivery-station') }}
{% endblock %}
