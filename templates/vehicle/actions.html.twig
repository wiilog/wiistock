<div class="d-flex">
    <div class="dropdown dropright {{ not hasRight(constant('App\\Entity\\Menu::REFERENTIEL'), constant('App\\Entity\\Action::DELETE')) ? 'd-none' }}">
        {% include 'datatable/dotsRow.html.twig' %}
        <div class="dropdown-menu dropdown-follow-gt pointer">
            {% if hasRight(constant('App\\Entity\\Menu::REFERENTIEL'), constant('App\\Entity\\Action::EDIT')) %}
                <div class="d-none">
                    <div class="action-on-click"
                         data-id='{{ id }}'
                         data-target='#modalEditVehicle'
                         data-toggle='modal'
                         onclick="editRow($(this), Routing.generate('vehicle_edit_api', true), $(`#modalEditVehicle`), $('#submitEditVehicle'))">
                        <i class='fas fa-pencil-alt '></i>
                    </div>
                </div>
            {% endif %}
            {% if hasRight(constant('App\\Entity\\Menu::REFERENTIEL'), constant('App\\Entity\\Action::DELETE')) %}
                <div>
                    <div class="dropdown-item"
                         onclick="checkAndDeleteRow($(this), `#modalDeleteVehicle`, `vehicle_check_delete`, `#submitDeleteVehicle`)"
                         data-id='{{ id }}'
                         data-target='#modalDeleteVehicle'
                         data-toggle='modal'>
                        <i class='fas fa-trash mr-2'></i>
                        Supprimer
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>
