<div class="row">
    <div class="form-group col-12">
        <label>Immatriculation*</label>
        <input type="text" class="form-control data needed" name="registrationNumber" value="{{ vehicle.registrationNumber }}">
    </div>

    <div class="form-group col-12">
        <label>Livreur*</label>
        <select class="form-control data needed w-100" data-s2="user" name="deliverer" data-include-params="input[name=delivererOnly]">
            {% if vehicle.deliverer %}
                <option value="{{ vehicle.deliverer.id }}">{{ vehicle.deliverer.username }}</option>
            {% endif %}
        </select>
        <input type="hidden" value="1" name="delivererOnly">
    </div>

    <div class="form-group col-12">
        <label>Emplacements associ√©s</label>
        <select class="form-control data w-100" data-s2="location" name="locations" multiple>
            {% for location in (vehicle.locations ?? []) %}
                <option value="{{ location.id }}" selected>{{ location.label }}</option>
            {% endfor %}
        </select>
    </div>
</div>
