{% extends 'layout.html.twig' %}

{% block title %}Paramétrage | Rôles{% endblock %}

{% block page_content %}
    <div class="m-4 wii-page-card">
        <div class="row wii-page-card-header">
            <div class="col-auto ml-auto">
                <button data-toggle="modal"
                   data-target="#modalNewRole"
                   class="btn btn-primary">
                    <span class="fa fa-plus mr-2"></span>Nouveau rôle
                </button>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <table id="tableRoles" class="table w-100">
                </table>
            </div>
        </div>
    </div>
    {% include 'role/modalNewRole.html.twig' %}
    {% include 'role/modalEditRole.html.twig' %}
    {% include 'role/modalDeleteRole.html.twig' %}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/pages/role.js') }}?v={{ web_version }}"></script>
{% endblock %}
