<div class="wii-box details-header-container p-4">
    {% block showHiddenInputs %}{% endblock %}
    <div class="row wii-page-card-header mb-0">
        <div class="col-auto" title="{% block showTitleTooltip '' %}">
            <h5 class="details-header-title capitalize">{% block showTitle '' %}</h5>
            <span>{% block showSubtitle '' %}</span>
        </div>

        {% if titleLogo is defined %}
            <i class="wii-icon wii-icon-{{ titleLogo }} mr-2 has-tooltip" title="{{ titleLogoTooltip }}"></i>
        {% endif %}

        {% set showActionsBlock = block('showActions') is defined ? block('showActions') %}
        {% if showActionsBlock is defined and showActionsBlock is not empty %}
            <div class="col-auto ml-auto">
                {{ showActionsBlock|raw }}
            </div>
        {% endif %}
    </div>

    {% if options.showNbRefUrgentInArrival %}
        <p>{{ arrivage.receptions|length }} réception(s) liée(s)</p>
        <p>Dont {{ nbRefUrgentInArrival }} références(s) en urgence</p>
    {% endif %}

    {% if showDetails is defined %}
        {% include 'utils/show-header-details.html.twig' with {data: showDetails} %}
    {% endif %}

    {% set urgenceBlock = block('showUrgence') is defined ? block('showUrgence') %}
    {% if urgenceBlock|trim is not empty %}
        <div class="urgence-row row">
            <div class="col-12 mt-3 text-center">
                <span class="h3 my-0">
                    {{ urgenceBlock|raw }}
                </span>
            </div>
        </div>
    {% endif %}
</div>
