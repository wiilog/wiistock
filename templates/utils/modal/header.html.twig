{% set title = title is defined and title ? title %}
{% set headerClasses = headerClasses is defined and headerClasses ? headerClasses %}
{% set titleClasses = titleClasses is defined and titleClasses ? titleClasses %}
{% set titleId = titleId is defined and titleId ? titleId %}
{% set hideTimes = hideTimes is defined and hideTimes %}
{% set onManualDismiss = onManualDismiss is defined ? onManualDismiss %}

<div class="modal-header {{ headerClasses }}">
    <h5 class="modal-title wii-title {{ titleClasses }}"
        id="{{ titleId }}"
        title="{{ title }}">
        <span class="capitalize">{{ title | raw }}</span>
    </h5>
    {% if not hideTimes %}
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true" {% if onManualDismiss %}onclick="{{ onManualDismiss }}"{% endif %}>&times;</span>
        </button>
    {% endif %}
</div>
