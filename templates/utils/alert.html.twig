{% set content = content is defined ? content %}
{% set id = id is defined ? id : 'alert-template' %}
{% set class = color is defined ? ('wii-alert-' ~ color) %}
{% set show = show is not defined or show ? 'd-flex' : 'd-none'  %}

{% set types = {
    success: 'Succ√®s',
    danger: 'Erreur',
    info: 'Information'
} %}

<div id="{{ id }}" class="alert-wrapper {{ class }} {{ show }}">
    <div class="alert-close">
        <button type="button"
                class="mr-2" onclick="$(this).closest('.alert-wrapper').remove();">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="alert-content">
        <span class="type"><strong>{{ color is defined ? types[color] : '' }}</strong></span>
        <span class="content">{{ content }}</span>
    </div>
</div>
