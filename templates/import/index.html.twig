{% extends 'layout.html.twig' %}

{% block title %}Param√©trage / Import{% endblock %}

{% block page_filter %}
    {% include 'filters/filtersImport.html.twig' with {
        'page': 'PAGE_IMPORT',
        'tableSelector': '#tableImport'
    } %}
{% endblock %}

{% block page_content %}
    <h1>Import</h1>

    <div class="row ">
        {% if hasRight(constant('App\\Entity\\Menu::PARAM'), constant('App\\Entity\\Action::DISPLAY_IMPORT')) %}
            <a href="" data-toggle="modal" data-target="#modalNewImportFirst" class="btn btn-primary float-left">
                <span class="fa fa-plus mr-2"></span>Nouvel import
            </a>
        {% endif %}
    </div>

    <table id="tableImport" class="table table-striped table-bordered w-100">
    </table>

    {% include 'import/modalNewImportFirst.html.twig' %}
    {% include 'import/modalNewImportSecond.html.twig' %}
    {% include 'import/modalNewImportConfirm.html.twig' %}

    <input hidden id="openModalNewImportSecond" data-toggle="modal" data-target="#modalNewImportSecond">
    <input hidden id="openModalNewImportConfirm" data-toggle="modal" data-target="#modalNewImportConfirm">

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/attachments.js')}}?{{ date().timestamp }}"> </script>
    <script src="{{ asset('js/import.js')}}?{{ date().timestamp }}"> </script>
{% endblock %}

