        {% include 'datatable/dotsRow.html.twig' %}
        <div class="dropdown-menu dropdown-follow-wiilog pointer">
            {% if hasRight(constant('App\\Entity\\Menu::STOCK'), constant('App\\Entity\\Action::DELETE')) %}
                <div class="dropdown-item d-flex align-items-center" onclick="deleteRow($(this), $('#modalDeleteRefFromMission'), '#submitDeleteRefFromMission')"
                     data-id="{{ inventoryData }}" data-target="#modalDeleteRefFromMission" data-toggle="modal">
                    <span class="wii-icon wii-icon-trash-black mr-2"></span>Supprimer
                </div>
            {% endif %}
        </div>
    </div>
</div>
