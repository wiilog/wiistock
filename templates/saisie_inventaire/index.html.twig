{% extends 'layout.html.twig' %}

{% block title %}Stock | Inventaire | Saisies d'inventaire{% endblock %}
{% block titleLink path('inventory_mission_index') %}

{% block page_filter %}
    {% include 'filters/filtersEntryInv.html.twig' with {
        'page': 'PAGE_INV_ENTRIES',
        'tableSelector': '#tableMissionEntries'
    } %}
{% endblock %}
{% block page_content %}
    <div class="m-4 wii-page-card">
        <div class="row wii-page-card-header">
            <div class="col-auto ml-auto">
                <div class="btn btn-primary btn-ripple" onclick="saveExportFile('get_inventory_entries_csv')">
                    <i class="fa fa-file-csv mr-2"></i>Exporter au format CSV
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="d-none justify-content-center" id="spinner">
                    <div class="spinner-border sizeLoader" role="status">
                        <span class="sr-only">Loading...</span>
                    </div>
                </div>

                <table id="tableMissionEntries" class="table w-100">
                </table>
            </div>
        </div>
    </div>
{% endblock %}

    {% block javascripts %}
        {{ parent() }}
        <script src="{{ asset('js/pages/inventory-entries.js') }}?v={{ web_version }}"></script>
    {% endblock %}
