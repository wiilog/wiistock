<form method="" class="modal show" id="modalAddColis" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            {% include('utils/modal/header.html.twig') with {
                title: 'colis.Ajouter un colis'|trans
            } %}

            <div class="modal-body modal-input container-fluid">
                {% if natures != null %}
                    <div class="row mt-4">
                        <div class='col-12 mb-2'>
                            <h3 class="label">Nombre <span title="de colis">{{ 'arrivage.de colis'|trans }}</span> à ajouter :</h3>
                        </div>
                        <div class="form-group col-12 blocVisible d-block">
                            <div class="d-block">
                                <div class="row mt-2">
                                    {% for nature in natures %}
                                        <div class="form-group col-6">
                                            <label class="wii-field-name">
                                                {{nature.label | capitalize}}
                                            </label>
                                            <input type="number"
                                                   class="form-control data-array needed-positiv needs-default"
                                                   value="{{ nature.defaultQuantity ? nature.defaultQuantity : 0 }}"
                                                   data-init="{{ nature.defaultQuantity ? nature.defaultQuantity : 0 }}"
                                                   name="colis"
                                                   data-id="{{ nature.id }}"
                                                   min="0"
                                                   max="500">
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    </div>
                {% else %}
                    {% include 'utils/warningSelectEmpty.html.twig' with {
                        array: natures,
                        warningLabel: 'Attention ! Aucune nature de colis n\'a été créée',
                        redirectPath: path('nature_param_index'),
                        redirectLabel: 'Aller vers la création des natures',
                        block: true,
                        rights: {
                            menu: constant('App\\Entity\\Menu::REFERENTIEL'),
                            action: constant('App\\Entity\\Action::CREATE')
                        }
                    } %}
                {% endif %}
            </div>

            <input hidden value="{{ arrivage.id }}" name="arrivageId" class="data">
            <div class="error-msg"></div>
            {% if natures is not empty %}
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Annuler</button>
                    <button id="submitAddColis" type="button" class="btn btn-success">Valider</button>
                </div>
            {% endif %}
        </div>
    </div>
</form>
