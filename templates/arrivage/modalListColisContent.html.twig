<h1 class="text-center">Arrivage n° {{ arrivage.numeroArrivage }}
    <a class="btn btn-primary"
       href="{{ path('print_arrivage_bar_codes', {arrivage: arrivage.id, printArrivage: 1}) }}">
        <i class='fas fa-print pointer'></i>
    </a>
</h1>

<table class="table table-striped table-bordered w-100">
    <tr>
        <th>N° colis</th>
        {% set listCodeColis = '' %}
        {% for pack in arrivage.packs %}
            {% set comma = loop.first ? '' : ',' %}
            {% set listCodeColis = listCodeColis~comma~pack.code %}
        {% endfor %}
        <th class="text-center">
            Impression
            <a href="{{ path('print_arrivage_bar_codes', {arrivage: arrivage.id, printColis: 1}) }}">
                <i class='fas fa-print'></i>
            </a>
        </th>
    </tr>
    {% for pack in arrivage.packs %}
        <tr>
            <td>{{ pack.code }}</td>
            <td class="text-center">
                <a href="{{ path('print_arrivage_single_colis_bar_codes', {arrivage: arrivage.id, colis: pack.id}) }}">
                    <i class='fas fa-print'></i>
                </a>
            </td>
        </tr>
    {% endfor %}
</table>
