<div method="" class="modal fade" id="modalAddArticle" role="dialog" aria-labelledby="modalAddArticleTitle"
    aria-hidden="true" data-transfer-id="{{ transfer.id }}">
    <div class="modal-dialog  modal-xl" role="document">
        <div class="modal-content">
            {% include 'utils/modal/header.html.twig' with {
                title: "Ajouter un article"
            } %}

            <div class="modal-body modal-input container-fluid">
                <form class="row">
                    <div class="form-group col-12 mb-3 w-100">
                        <label for="add-article-reference" title="référence">
                            {{ 'reference.référence'|trans }}*
                        </label>
                        <select class="ajax-autocomplete form-control data needed" name="reference"
                            onchange="onReferenceChange($(this))" id="add-article-reference">
                        </select>
                    </div>
                    <div id="add-article-code-selector" class="col-12 clear"></div>
                </form>
            </div>
            <div class="pl-2 error-msg"></div>
            <div class="modal-footer">
                <div class="btn btn-outline-secondary" data-dismiss="modal">Annuler</div>
                <button id="submitAddArticle"
                        name="transfer"
                        value="{{transfer.id}}"
                        type="button"
                        class="btn data btn-success">
                    Ajouter
                </button>
            </div>
        </div>
    </div>
</div>
