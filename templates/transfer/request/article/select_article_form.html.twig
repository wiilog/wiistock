<div class="form-group">
    <label class="required" for="add_article_to_transfer_reference">Article</label>
    <select id="add_article_to_transfer_reference" class="form-control data needed" name="article"
            required="required"
            class="form-control">
        <option value="">Sélectionner un article à transférer</option>
        {% for article in articles | filter ( v => not v.currentLogisticUnit) %}
            <option class="{{ (article.id in articleAlreadyInRequest) ? 'd-none' : '' }}" value="{{ article.id }}">{{ article.barCode }}</option>
        {% endfor %}
    </select>
</div>
