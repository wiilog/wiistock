{% extends 'layout.html.twig' %}

{% block title %}Ordre | Transfert{% endblock %}

{% block page_filter %}
    {% include 'transfer/request/filters.html.twig' with {
        'page': 'PAGE_TRANSFER_ORDER',
        'tableSelector': '#tableTransferOrders',
    } %}
{% endblock %}
{% block page_content %}
    <div class="m-4 wii-page-card">
            <div class="row wii-page-card-header">
                <div class="col-auto ml-auto">
                    {% if receptionFilter is defined and receptionFilter is not null and receptionFilter != 0 %}
                        <div class="btn-group">
                            <div class="btn btn-primary btn-ripple split-button">
                                <a href="{{ path('transfer_order_index') }}">Voir tous les ordres</a>
                            </div>
                            <button type="button"
                                    class="btn btn-primary btn-ripple dropdown-toggle dropdown-toggle-split"
                                    data-toggle="dropdown"
                                    aria-haspopup="true"
                                    aria-expanded="false">
                                <span class="fa fa-angle-down"></span>
                            </button>
                            <div class="dropdown-menu dropdown-follow-gt dropdown-menu-right">
                                <a href="{{ path('reception_show', {'id': receptionFilter}) }}" class='dropdown-item pointer'>Retour à la réception</a>
                            </div>
                        </div>
                    {% endif %}
                    {% if hasRight(constant('App\\Entity\\Menu::DEM'), constant('App\\Entity\\Action::EXPORT')) %}
                    <!-- TODO: export des transferts -->
                    <div class="btn btn-primary btn-ripple"
                         onclick="saveExportFile('transfer_order_export')">
                        <span class="fa fa-file-csv mr-2"></span>Exporter au format CSV
                    </div>
                    {% endif %}
                </div>
            </div>
        <div class="row">
            <div class="col-12">
                <table id="tableTransferOrders" class="table w-100"></table>
            </div>
        </div>
    </div>
    <input type="hidden" value="{{ receptionFilter }}" id="receptionFilter">
    {% include 'transfer/request/new.html.twig' %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/pages/transfer/order/index.js') }}?{{ app_last_cache_clear }}"></script>
{% endblock %}
