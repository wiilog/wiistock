{% for alerteId in alertesId %}

    <div class="d-flex">
        {% if hasRight(constant('App\\Entity\\Menu::PARAM'), constant('App\\Entity\\Action::EDIT')) %}
            <div>
                <div class="btn btn-col-action" data-id='{{ alerteId }}' data-target='#modalEditAlerteExpiry' data-toggle='modal'
                onclick="editRow($(this), Routing.generate('alerte_expiry_api_edit', true), $('#modalEditAlerteExpiry'), $('#submitEditAlerteExpiry'))">
                    <i class='fas fa-pencil-alt'></i>
                </div>
            </div>
            <div>
                <div class="btn btn-col-action"
                onclick="deleteRow($(this), $('#modalDeleteAlerteExpiry'), $('#submitDeleteAlerteExpiry'))"
                data-id='{{ alerteId }}' data-target='#modalDeleteAlerteExpiry' data-toggle='modal'>
                    <i class='fas fa-trash'></i>
                </div>
            </div>
            {% if allRef %}
                <div>
                    <div class="btn btn-col-action"
                         onclick="showRow($(this), Routing.generate('show_alerte', true), $('#modalShowAlerteExpiry'))"
                         data-id='{{ alerteId }}' data-target='#modalShowAlerteExpiry' data-toggle='modal'>
                        <i class='fas fa-eye'></i>
                    </div>
                </div>
            {% endif %}
        {% endif %}
    </div>

{% endfor %}