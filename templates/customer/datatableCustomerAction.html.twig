{% if hasRight(constant('App\\Entity\\Menu::REFERENTIEL'), constant('App\\Entity\\Action::EDIT')) %}
    <div class="action-on-click d-none"
         data-id='{{ customer.id }}'
         data-target='#modalEditCustomer'
         data-toggle='modal'
         onclick="editRow($(this), Routing.generate('customer_edit_api', true), $(`#modalEditCustomer`), $('#submitEditCustomer'))">
        <i class='fas fa-pencil-alt '></i>
    </div>
{% endif %}

{% if hasRight(constant('App\\Entity\\Menu::REFERENTIEL'), constant('App\\Entity\\Action::DELETE')) %}
    <div class="d-flex align-items-center"
         onclick="deleteCustomer({{ customer.id }})" >
        <span class="wii-icon wii-icon-trash-black mr-2"></span>
    </div>
{% endif %}
