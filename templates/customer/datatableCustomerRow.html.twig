<div class="d-flex">
    {% if hasRight(constant('App\\Entity\\Menu::REFERENTIEL'), constant('App\\Entity\\Action::DELETE')) %}
        <div data-id='{{ customer.id }}' data-target='#modalDeleteCustomer' data-toggle='modal'
             onclick="checkAndDeleteRow($(this), '#modalDeleteCustomer', 'customer_check_delete', '#submitDeleteCustomer')"
             class="d-flex align-items-center">
            <span class="wii-icon wii-icon-trash-black mr-2"></span>
        </div>
    {% endif %}

    {% if hasRight(constant('App\\Entity\\Menu::REFERENTIEL'), constant('App\\Entity\\Action::EDIT')) %}
        <div data-id='{{ customer.id }}' data-target='#modalEditCustomer' data-toggle='modal'
             class='action-on-click d-none'
             onclick="editRow($(this), Routing.generate('customer_edit_api', true), $('#modalEditCustomer'), $('#submitEditCustomer'))">
            <i class='fas fa-pencil-alt'></i>
        </div>
    {% endif %}
</div>

