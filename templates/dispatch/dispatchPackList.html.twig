<div class="row"
     data-multiple-key="packs"
     data-multiple-object-index="{{ index }}">
    <input type="hidden" class="data" name="packId" value="{{ pack.id }}">
    <div class="col-3">
        <div class="form-group">
            <label for="transporter-tracking-number" class="wii-field-name">{{ trans('Traçabilité', 'Unités logistiques', 'Onglet "Unités logistiques"', 'Numéro d\'UL') }}</label>
            <input class="form-control data no-clear"
                   value="{{ pack.code }}"
                   name="packNumber" disabled>
        </div>
    </div>
    <div class="col-3">
        <div class="form-group">
            <label for="transporter-tracking-number" class="wii-field-name">{{ 'colis.Quantité colis'|trans }}</label>
            <input class="form-control data no-clear"
                   value="{{ pack.quantity }}"
                   name="packQuantity">
        </div>
    </div>
    <div class="col">
        <div class="form-group">
            <label for="transporter-tracking-number" class="wii-field-name">{{ trans('Général', null, 'Modale', 'Commentaire') }}</label>
            <input class="form-control data no-clear"
                   value="{{ pack.comment | striptags }}"
                   name="packComment">
        </div>
    </div>
    <div class="col-auto align-self-center">
        <a class="pointer"><i class="wii-icon wii-icon-trash bg-primary mr-2" onclick="removePackInDispatchModal($(this))"></i></a>
    </div>
</div>
