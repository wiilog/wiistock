<form method="" class="modal fade" id="modalPack" role="dialog" aria-labelledby="dataModalCenterTitle"
      aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <span class="title-new-pack" title="Ajouter un colis">{{ 'colis.Ajouter un colis'|trans }}</span>
                    <span class="title-edit-pack" title="Modifier un colis">{{ 'colis.Modifier un colis'|trans }}</span>
                </h5>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body modal-input container-fluid">
                <div class="form-group">
                    <label for="type" title="Colis">{{ 'mouvement de traçabilité.Colis'|trans }}*</label>
                    <div class="d-flex">
                        {% if prefixPackCodeWithDispatchNumber %}
                            <input type="text" class="form-control text-right no-clear mr-2" value="{{ dispatch.number }}" disabled>
                        {% endif %}
                        <input type="text"
                               class="form-control data needed"
                               name="pack"
                               title="{{ 'mouvement de traçabilité.Colis'|trans }}"
                               onchange="togglePackDetails()"/>
                    </div>
                </div>

                <div class="w-100 text-center">
                    <div class="spinner-border" role="status">
                        <span class="sr-only">Chargement...</span>
                    </div>
                </div>

                <div class="form-group pack-details">
                    <label title="Nature de colis">{{ 'natures.Nature de colis'|trans }}*</label>
                    <select class="form-control data needed"
                            name="nature"
                            title="{{ 'natures.Nature de colis'|trans }}">
                        <option title="Sélectionner une nature">{{ 'natures.Sélectionner une nature'|trans }}</option>
                        {% for nature in natures %}
                            <option value="{{ nature.id }}">{{ nature.label }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="form-group pack-details">
                    <label title="Quantité à acheminer">{{ 'acheminement.Quantité à acheminer'|trans }}*</label>
                    <input type="number"
                           class="form-control data needed"
                           name="quantity"
                           min="1"
                           step="1"
                           title="{{ 'acheminement.Quantité à acheminer'|trans }}"/>
                </div>
                <div class="form-group pack-details">
                    <label for="weight">Poids (kg)</label>
                    <input type="text"
                           class="form-control data"
                           name="weight"
                           min="1"
                           step="any"/>
                </div>
                <div class="form-group pack-details">
                    <label for="volume">Volume (m³)</label>
                    <input type="text"
                           class="form-control data"
                           name="volume"
                           min="1"
                           step="1"/>
                </div>
                <div class="form-group pack-details">
                    <label title="Quantité colis">{{ 'colis.Quantité colis'|trans }}</label>
                    <input type="number"
                           class="form-control"
                           name="pack-quantity"
                           title="{{ 'colis.Quantité colis'|trans }}"
                           disabled/>
                </div>
                <div class="form-group pack-details">
                    <label for="commentaire">Commentaire</label>
                    <input class="commentaire form-control data"
                           name="comment"
                           type="hidden">
                    <div class="editor-container"></div>
                </div>
            </div>

            <div class="error-msg"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                <button type="button"
                        class="btn btn-primary submit-new-pack">
                    Enregistrer
                </button>
                <button type="button"
                        class="btn btn-primary submit-edit-pack">
                    Enregistrer
                </button>
            </div>
        </div>
    </div>
</form>
