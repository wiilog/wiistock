{% import 'form.html.twig' as form %}

<div class="row">
    {{ form.input('dispatch', '', false, dispatch.id, {
        type: 'hidden'
    }) }}
    {{ form.input('defaultNatureId', '', false, nature ? nature.id : null, {
        type: 'hidden'
    }) }}
    {{ form.input('defaultNatureLabel', '', false, nature ? nature.label : null, {
        type: 'hidden'
    }) }}
    {{ form.input('defaultQuantityNatureForDispatch', '', false, nature ? nature.defaultQuantityForDispatch : null, {
        type: 'hidden'
    }) }}
    <div class="col-4 d-flex mt-2">
        {{ form.select('pack', 'Code', true, {
            type: 'pack',
            onChange: 'selectUlChanged($(this))'
        }) }}
    </div>
    <div class="col-4 d-flex mt-2">
        {{ form.input('quantity', trans('Demande', 'Acheminements', 'Détails acheminement - Liste des unités logistiques', 'Quantité à acheminer', false), true, null, {
            type: 'number',
            min: 0
        }) }}
    </div>
    <div class="col-4 d-flex mt-2">
        {{ form.select('nature', 'Nature', true, {
            type: 'nature'
        })}}
    </div>
</div>
<div class="row">
    <div class="col-4 d-flex mt-2">
        {{ form.input('weight', trans('Demande', 'Acheminements', "Général", "Poids (kg)"), false, null, {
            type: 'number'
        } ) }}
    </div>
    <div class="col-4 d-flex mt-2">
        {{ form.input('volume', trans('Demande', 'Acheminements', "Général", "Volume (m3)"), false, null, {
            type: 'number'
        } ) }}
    </div>
</div>
<div class="row">
    <div class="form-group col-4 mt-2">
        <label class="wii-field-name">{{ trans('Demande', 'Acheminements', "Général", "Date dernier mouvement") }}</label>
        <div class="ul-last-movement-date"></div>
    </div>
    <div class="form-group col-4 mt-2">
        <label class="wii-field-name">{{ trans('Demande', 'Acheminements', "Général", "Dernier emplacement") }}</label>
        <div class="ul-last-location"></div>
    </div>
    <div class="form-group col-4 mt-2">
        <label class="wii-field-name">{{ trans('Demande', 'Acheminements', "Général", "Opérateur") }}</label>
        <div class="ul-operator"></div>
    </div>
</div>
<div class="row">
    <div class="form-group col-4 mt-2">
        <label class="wii-field-name">{{ trans('Demande', 'Acheminements', "Général", "Statut") }}</label>
        <div class="ul-statut">A traiter</div>
    </div>
</div>
<div class="row">
    <div class="col-8 mt-2">
        {{ form.wysiwyg('comment', 'Commentaire', false)}}
    </div>
</div>
