<div class="modal-body modal-input container-fluid">

    <div class="row">
        <div class="form-group col-8">
            <label for="typeLitige">Type*</label>
            <select class="form-control data needed" id="typeLitige" name="typeLitige">
                <option placeholder="" value="{{ litige.type.id }}" selected>{{ litige.type.label }}</option>
                {% for type in typesLitige %}
                    {% if type.id != litige.type.id %}
                        <option value="{{ type.id }}">{{ type.label }}</option>
                    {% endif %}
                {% endfor %}
            </select>
        </div>
        <div class="form-group col-4 mt-4">
            <label>Urgence ?</label>
            <label class="switch">
                <input class="checkbox" type="checkbox" name="emergency" {{ litige.emergencyTriggered ? 'checked': ''}}>
                <span class="slider round"></span>
            </label>
        </div>
        <div class="form-group col-12">
            <label for="statutLitige">Statut*</label>
            <select class="form-control data needed" id="statutLitige" name="statutLitige">
                {% for statut in statusLitige %}
                    {% set selected = (litige.status.id == statut.id) ? 'selected' : '' %}
                    <option value="{{ statut.id }}" {{ selected }}>{{ statut.nom }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="form-group w-100 col-12">
            <label for="acheteursLitige">Acheteur(s)</label>
            <select class="form-control data select2" name="acheteursLitige" id="acheteursLitigeEdit" multiple="multiple">
                {% for acheteur in acheteurs %}
                    <option value="{{ acheteur.id }}">{{ acheteur.text }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="form-group w-100 col-12">
            <label for="colisEditLitige" title="articles">{{ 'r√©ception.articles'|trans }}*</label>
            <select type="text" class="form-control data select2 needed select2-autocomplete-articles" name="colis" multiple="multiple"
                    id="colisEditLitige">
            </select>
        </div>

        <div class="form-group col-12 h-fit-content">
            <label for="litige-edit-commentaire">Commentaire</label>

            <div class="d-flex">
                <input type="text" id="litige-edit-commentaire" class="commentaire form-control data" name="commentaire">
                <button type="button" class="btn form-group m-0 ml-2" onclick="getCommentAndAddHisto()">Ajouter</button>
            </div>
        </div>
        <div class="form-group col-12">
            <div>
                {% include 'attachment/attachment.html.twig' with {'isNew' : false} %}
            </div>
        </div>
    </div>
    <div class="label">Historique</div>
    <div class="tableHistoric">
        <table id="tableHistoLitige" class="table table-striped table-bordered w-100 no-padding-on-p"></table>
    </div>
    <input hidden value="{{ litige.id }}" id="litigeId" class="data">
</div>
