<div class="d-flex">
    <div class="dropdown dropright {{ not hasRight(constant('App\\Entity\\Menu::QUALI'), constant('App\\Entity\\Action::DELETE')) ? 'd-none' }}">
        {{ include('datatable/dotsRow.html.twig') }}
        <div class="dropdown-menu dropdown-follow-gt pointer">
            {% if hasRight(constant('App\\Entity\\Menu::QUALI'), constant('App\\Entity\\Action::EDIT')) %}
                <div class="d-none">
                    <div class="action-on-click"
                         data-toggle='modal'
                         data-target='#modalEditLitige'
                         id="litigeArticleModal"
                         onclick="editRowLitigeReception($(this), openTableHisto, {{ receptionId }}, {{ disputeId }}, '{{ disputeNumber }}')">
                        <i class='fas fa-pencil-alt'></i>
                    </div>
                </div>
            {% endif %}
            {% if hasRight(constant('App\\Entity\\Menu::QUALI'), constant('App\\Entity\\Action::DELETE')) %}
                <div onclick="deleteRow($(this), $('#modalDeleteLitige'), $('#submitDeleteLitige'))"
                     data-id='{{ disputeId }}'
                     data-target='#modalDeleteLitige'
                     data-toggle='modal'
                     class="dropdown-item d-flex align-items-center">
                    <span class="wii-icon wii-icon-trash-black mr-2"></span>Supprimer
                </div>
            {% endif %}
        </div>
    </div>
</div>
