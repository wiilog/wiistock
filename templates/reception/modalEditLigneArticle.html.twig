<form method="" class="modal fade" id="modalEditLigneArticle" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Modifier une ligne <span title="de réception">{{ 'réception.de réception'|trans }}</span></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body modal-input container-fluid"></div>
            <div class="error-msg p-4"></div>
            <div class="modal-footer">
                <button type="button" class="btn" data-dismiss="modal">Annuler</button>
                <button id="submitEditLigneArticle" type="button" name="article"
                    class="btn btn-primary btn-success data" onclick="setCommentaire('.editor-container-article')">Enregistrer</button>
            </div>
        </div>
    </div>
</form>