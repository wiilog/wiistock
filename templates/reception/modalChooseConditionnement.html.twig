<form method="" class="modal fade" id="modalChoose" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><span title="articles">{{ 'réception.articles'|trans }}</span> de la référence <span id="reference-list"></span></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <table id="tableArticleInner_id" class="table table-striped table-bordered w-100">
                </table>
                {% set statutVisible = hasRight(constant('App\\Entity\\Menu::STOCK'), constant('App\\Entity\\Action::EDIT')) %}
                <input type="hidden" id="statutVisible" name="statutVisible" value="{{statutVisible}}">
            </div>
            <div class="modal-footer">
                <div class="btn" data-dismiss="modal">Fermer</div>
            </div>
        </div>
    </div>
</form>
