{% import 'form.html.twig' as form %}

<div class="col-2">
    <div class="d-flex flex-column justify-content-center dark-background" style="background: #3353D7; height: 100%; padding: 10px; border-radius: 5px;">
        {{ form.input('quantityToReceive', 'Article(s)', true, receptionReferenceArticle.quantiteAR, {
            type: 'number',
        }) }}
    </div>
</div>
<div class="col-10">
    <div class="" style="background: #F2F3F7; border-radius: 5px; height: 100%;">
        <div class="d-flex">
            <div class="col-2 form-group mt-2">
                {{ form.number('quantity', 'Quantité', true, 1, {
                    buttons: false,
                    min: 1,
                }) }}
            </div>
            <div class="col-3 form-group mt-2">
                {{ form.input('batch', 'Lot') }}
            </div>
            <div class="col-3 form-group mt-2">
                {{ form.input('expiry', 'Date de péremption', false, '', {type: 'date'}) }}
            </div>
        </div>
        {% include 'free_field/freeFieldsEdit.html.twig' with {
            freeFields: freeFields|sort((a, b) => b.typage <=> a.typage),
            freeFieldValues: [],
            colType: 'col-md-4 col-12',
            requiredType: 'requiredCreate',
            actionType: 'new',
            containerClasses: 'row px-3'
        } %}
    </div>
</div>
<input type="hidden" class="data" name="reference" value="{{ receptionReferenceArticle.referenceArticle.id }}">
<input type="hidden" class="data" name="supplierReference" value="{{ supplierReference ? supplierReference.reference }}">
<input type="hidden" class="data" name="orderNumber" value="{{ orderNumber }}">
<div class="col-12 d-flex justify-content-end mt-3">
    <button type="submit" class="btn btn-primary d-flex align-items-center add-articles">
        <span class='wii-icon wii-icon-plus mr-2'></span>
        Ajouter des articles
    </button>
</div>

