<form method="" class="modal fade" id="modalEditReception" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Modifier <span title="une réception">{{ 'réception.une réception'|trans }}</span></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body modal-input container-fluid"></div>
            <div class="error-msg"></div>
            <div class="modal-footer">
                <input type="hidden" class="data" name="receptionId" value="{{ reception.id }}">
                <button type="button" class="btn" data-dismiss="modal">Annuler</button>
                <button id="submitEditReception" type="button" name="reception" class="btn btn-primary btn-success data" onclick="setCommentaire('.editor-container-edit')">
                    Enregistrer
                </button>
            </div>
        </div>
    </div>
</form>
