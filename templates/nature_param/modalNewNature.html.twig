<form method="" class="modal fade" id="modalNewNature" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Créer une nature</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body modal-input container-fluid">
                <div class="row">
                    <div class="mb-3 form-group col-12">
                        <label>Label*</label>
                        <input type="text" class="data form-control needed" name="label">
                    </div>
                </div>
                <div class="row">
                    <div class="mb-3 form-group col-12">
                        <label>Code*</label>
                        <input type="text" class="data form-control needed" name="code">
                    </div>
                </div>
                <div class="row">
                    <div class="mb-3 form-group col-12">
                        <label>Quantité par défaut*</label>
                        <input type="text" class="data form-control needed" name="quantity">
                    </div>
                </div>
                <div class="row">
                    <div class="mb-3 form-group col-12">
                        <label>Couleur*</label>
                        <input type="color" class="data form-control needed" name="color">
                    </div>
                </div>
                <div class="row">
                    <div class="mb-3 form-group col-12">
                        <label>Préfixe*</label>
                        <input type="text" class="data form-control needed" name="prefix">
                    </div>
                </div>
            </div>
            <div class="error-msg p-4"></div>
            <div class="modal-footer">
                <button type="button" class="btn" data-dismiss="modal">Annuler</button>
                <button id="submitNewNature" type="button" class="btn btn-success">Enregistrer</button>
            </div>
        </div>
    </div>
</form>
