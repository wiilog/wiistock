{% extends 'layout.html.twig' %}

{% block title %}Référentiel | Natures{% endblock %}

{% block page_content %}
    <div class="m-4 wii-page-card">
        <div class="row wii-page-card-header">
            <div class="col-auto ml-auto">
                <button data-toggle="modal" data-target="#modalNewNature" class="btn btn-primary d-flex align-items-center"
                        onclick="onNewModalShow();">
                    <span class="wii-icon wii-icon-plus mr-2"></span>
                    Ajouter une nature
                </button>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <table id="tableNatures" class="table w-100">
                </table>
            </div>
        </div>
    </div>
    {% include 'nature_param/modalNewNature.html.twig' %}
    {% include 'nature_param/modalEditNature.html.twig' %}
    {% include 'nature_param/modalDeleteNature.html.twig' %}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/pages/nature.js') }}?v={{ web_version }}"></script>
{% endblock %}
