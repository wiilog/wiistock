<div class="d-flex">
    <div class="dropdown dropright">
        {% include 'datatable/dotsRow.html.twig' %}
        <div class="dropdown-menu dropdown-follow-gt pointer">
            <div class="d-none">
                <div class="action-on-click" data-id='{{ natureId }}' data-toggle='modal' data-target='#modalEditNature'
                     onclick="editRow($(this), Routing.generate('nature_api_edit', true), $('#modalEditNature'), $('#submitEditNature'))">
                    <i class='fas fa-pencil-alt'></i>
                </div>
            </div>

            <div onclick="checkAndDeleteRow($(this), '#modalDeleteNature', 'nature_check_delete', '#submitDeleteNature')"
                 data-id='{{ natureId }}' data-target='#modalDeleteNature' data-toggle='modal' class="dropdown-item">
                <i class='fas fa-trash mr-2'></i>Supprimer
            </div>
        </div>
    </div>
</div>
