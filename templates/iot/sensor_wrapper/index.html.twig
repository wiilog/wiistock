{% extends 'layout.html.twig' %}

{% block title %}IoT | Capteurs{% endblock %}

{% block page_content %}
    <div class="m-4 wii-page-card">
        <div class="row wii-page-card-header">
            <div class="col-auto ml-auto">
                {% if hasRight(constant('App\\Entity\\Menu::IOT'), constant('App\\Entity\\Action::CREATE')) %}
                    <div class="btn btn-primary btn-ripple"
                         data-toggle='modal'
                         data-target='#modalNewSensorWrapper'>
                        <span class="fa fa-plus mr-2"></span>Provisionner un capteur
                    </div>
                {% endif %}
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <table id="tableSensorWrapper" class="table w-100"></table>
            </div>
        </div>
    </div>

    {% include 'iot/sensor_wrapper/new.html.twig' %}
    {% include 'iot/sensor_wrapper/edit.html.twig' %}
    {% include 'iot/sensor_wrapper/delete.html.twig' %}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/pages/iot/sensor-wrapper-index.js') }}?v={{ web_version }}"></script>
{% endblock %}
