{% extends 'filters/filters.html.twig' %}

{% block filters %}
    {% set isPreFilled = (managers is defined and managers is not empty)
        or (referenceTypes is defined and referenceTypes is not empty) %}
    {% include 'filters/filter_item/filterDate.html.twig' with {disabled: isPreFilled ? 'disabled'}%}
    {% include 'filters/filter_item/filterTypeMultiple.html.twig' with {disabled: isPreFilled ? 'disabled'}%}
    {% include 'filters/filter_item/filterAlert.html.twig' with {disabled: isPreFilled ? 'disabled'}%}
    {% include 'filters/filter_item/filterUser.html.twig' with {
        name: 'managers',
        placeholder: 'Gestionnaires',
        disabled: isPreFilled ? 'disabled',
        managers: managersFilter is defined and managersFilter is not empty ? managersFilter : []
    }%}
{% endblock %}
