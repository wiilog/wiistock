{% extends 'filters/filters.html.twig' %}

{% block filters %}
    {% include 'filters/filter_item/filterDate.html.twig' %}
    {% include 'filters/filter_item/filterPacks.html.twig' %}
    {% include 'filters/filter_item/filterNaturePacks.html.twig' with {
        naturesFilter,
    } %}
    {% include 'filters/filter_item/filterLocation.html.twig' with {
        isPreFilled: locationsFilter is defined and locationsFilter is not empty,
        locationsFilter,
        multiple: true,
        placeholder: "Emplacement",
    } %}
    {% include 'filters/filter_item/filterNumArrivage.html.twig' with {
        title: trans('Traçabilité', 'Unités logistiques', 'Divers', 'N° d\'arrivage UL', false)
    } %}
    {% include 'filters/filter_item/filterProject.html.twig' %}
    {% include 'filters/filter_item/filterBasicString.html.twig' with {
        name: 'receiptAssociation',
        placeholder: 'Association',
    } %}

    {% include 'filters/filter_item/filterBasicSelect.html.twig' with {
        name: 'type',
        options: {
            type: '',
            items: [
                { value: 'pack', label: 'Unité logistique' },
                { value: 'group', label: 'Groupe' },
            ],
            placeholder: 'Type',
        },
    } %}
    {% include 'filters/filter_item/filterBasicCheckbox.html.twig' with {
        label: 'Délai de traitement',
        name: 'packWithTracking',
        checked: packWithTracking,
    }%}
{% endblock %}
