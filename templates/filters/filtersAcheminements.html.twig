{% extends 'filters/filters.html.twig' %}

{% block filters %}
    {% include 'filters/filter_item/filterDate.html.twig' %}
    {% include 'filters/filter_item/filterDispatch.html.twig' %}
    {% include 'filters/filter_item/filterStatus.html.twig' %}
    {% include 'filters/filter_item/filterTypeMultiple.html.twig' %}
    {% include 'filters/filter_item/filterUser.html.twig' with {
        name: 'requesters'
    }%}
    {% set fieldCode = constant('App\\Entity\\FieldsParam::FIELD_CODE_CARRIER_DISPATCH') %}
    {% if fieldsParam|isFieldRequired(fieldCode, 'displayedFilters') %}
        {% include 'filters/filter_item/filterCarrier.html.twig' %}
    {% endif %}
    {% include 'filters/filter_item/filterEmergencyMultiple.html.twig' %}
    {% set fieldCode = constant('App\\Entity\\FieldsParam::FIELD_CODE_RECEIVER_DISPATCH') %}
    {% if fieldsParam|isFieldRequired(fieldCode, 'displayedFilters') %}
        {% include 'filters/filter_item/filterUser.html.twig' with {
            name: 'receivers'
        }%}
    {% endif %}
{% endblock %}
