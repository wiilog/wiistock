<div class="col-auto m-1 pr-0">
    <div class="checkbox-filter cursor-default {{ disabled is defined and disabled ? 'disabled' }}">
        <div class="row no-gutters align-items-center">
            <div class="col">
                {{ trans('Traçabilité', 'Arrivages UL', 'Champs fixes', 'Douane') }} ?
            </div>
            <label class="switch col-auto">
                <input
                    class="checkbox filter-checkbox"
                    type="checkbox"
                    name="customs"
                    id="customs-filter"
                    {% if disabled is defined and disabled %}
                        disabled="disabled"
                    {% endif %}
                >
                <span class="slider round"></span>
            </label>
        </div>
    </div>
</div>
