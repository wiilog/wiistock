<div class="col-auto m-1 select-filter pr-0">
    <div class="select2-overflow">
        <div class="input-group w-100 cursor-default">
            <select class="form-control data select2 filter-select2"
                    name="statut"
                    multiple="multiple"
                    data-s2
                    data-placeholder="Statuts"
                    data-no-empty-option
                    {{ disabled }}>
                {% for statut in statuts|sort((a, b) => a.nom <=> b.nom) %}
                    {% set selected = (filterStatus is defined and statut.nom == filterStatus) ? 'selected' %}
                    <option class="d-none" value="{{ statut.id }}" {{ selected }}>{{ statut.nom }}</option>
                {% endfor %}
            </select>
        </div>
        <input hidden id="filterStatus" value="{{ filterStatus is defined ? filterStatus : '' }}">
    </div>
</div>
