<div class="col-auto m-1 pr-0">
    {% if categories is defined %}
        {% for category in categories %}
            <button class="btn btn-primary filter-tab minw-105px" data-id="{{ category.id }}">
                {{ category.nom }}
            </button>
        {% endfor %}

        <select hidden class="filter-input" name="statusEntity" {{ disabled }}>
            <option value>Entit√©</option>
            {% for category in categories|sort((a, b) => a.nom <=> b.nom) %}
                <option value="{{ category.id }}">
                    {{ category.nom }}
                </option>
            {% endfor %}
        </select>
    {% endif %}
</div>
