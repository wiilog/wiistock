<div class="col-auto m-1 pr-0">
    {% if types is defined %}
        <div class="minw-100px">
            <div class="input-group">
                <select class="form-control data cursor-default filter-input"
                        name="type" {{ disabled }}
                        {% if onchange is defined %}onchange="{{ onchange }}"{% endif %}
                        id="type">
                    <option value>{{ placeholder is defined ? placeholder : 'Type' }}</option>
                    {% for type in types | sort((a, b) => a.label <=> b.label) %}
                        <option value="{{ type.label }}">
                            {{ userLanguage is defined and  defaultLanguage is defined
                                ? type.labelIn(userLanguage, defaultLanguage)
                                : type.label }}
                        </option>
                    {% endfor %}
                </select>
            </div>
            <input class="current-username" hidden value="{{ app.user.username }}">
        </div>
    {% endif %}
</div>
