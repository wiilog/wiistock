{% import 'form.html.twig' as form %}
{% set naturesFilter = naturesFilter ?? [] %}

<div class="col-auto m-1 select-filter pr-0">
    {{ form.select('natures', null, false, {
        type: '',
        multiple: true,
        placeholder: 'Natures',
        disabled: disabled is defined ? disabled : false,
        inputClass: 'minw-200px filter-select2',
        items:  natures | sort((a, b) => a.label <=> b.label) | map(nature => {
            label: nature.labelIn(userLanguage, defaultLanguage),
            value: nature.id,
            selected: nature.id in naturesFilter
        })
    }) }}
</div>
