{% set placeholder = placeholder is defined ? placeholder : 'Types' %}
<div class="col-auto m-1 select-filter pr-0">
    <div class="select2-overflow">
        <div class="input-group w-100 cursor-default">
            <select
                class="form-control data select2 filter-select2"
                name="multipleTypes"
                multiple="multiple"
                data-placeholder="{{ placeholder }}"
                {% if onchange is defined %}onchange="{{ onchange }}"{% endif %}
                {{ disabled }}>
                {% for type in types|sort((a, b) => a.label <=> b.label) %}
                    {% set selected = (filterTypes is defined and type.label in filterTypes) ? 'selected' %}
                    <option class="d-none" value="{{ type.id }}" {{ selected }}>{{ type.label }}</option>
                {% endfor %}
            </select>
        </div>
    </div>
</div>
