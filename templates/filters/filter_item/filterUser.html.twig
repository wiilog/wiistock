{% set name = name is defined ? name : 'utilisateurs' %}
{% set managersFilter = managersFilter is defined ? managersFilter : '' %}
{% set delivererOnly = delivererOnly ?? 0 %}

<div class="col-auto m-1 select-filter pr-0">
    <div class="select2-overflow">
        <div class="input-group w-100 cursor-default">
            <select class="form-control data ajax-autocomplete-user filter-select2"
                    data-s2="user"
                    data-placeholder="{{ placeholder is defined ? placeholder : 'Utilisateurs' }}"
                    data-include-params="input[name=delivererOnly]"
                    data-include-params-parent=".select-filter"
                    name="{{ name }}"
                    multiple="multiple"
                    {{ disabled }}>
                {% for manager in managersFilter %}
                    <option selected value="{{ manager.id }}">{{ manager.username }}</option>
                {% endfor %}
            </select>
        </div>
    </div>
    <input type="hidden" value="{{ delivererOnly }}" name="delivererOnly"/>
</div>

