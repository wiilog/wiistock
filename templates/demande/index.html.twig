{% extends 'layout.html.twig' %}

{% block title %}Demandes de livraison{% endblock %}

{% block page_content %}
{#fermeture de la div de layout pour fermer le container et ne pas avoir de bordure#}
</div>
<div class="row filterService align-items-center pl-2">

    <div class='col-5'>
        <div class="input-group">
            <div class="input-group-prepend">
                <div class="input-group-text">De</div>
            </div>
            <input type="date" class="form-control" name="dateMin" id="dateMin" placeholder="Date de début">
            <div class="input-group-prepend">
                <div class="input-group-text">Au</div>
            </div>
            <input type="date" class="form-control" name="dateMax" id="dateMax" placeholder="Date de fin">
        </div>
    </div>

    <div class='col-2'>
        <div class="input-group">
            <select class="form-control data" name="statut" id="statut" placeholder='statut'>
                <option value>Statut </option>
                {% for statut in statuts %}
                <option value="{{ statut.nom }}">{{ statut.nom }}</option>
                {% endfor %}
            </select>
        </div>
    </div>

    <div class='col-3'>
        <div class="input-group">
            <select type="text" class="form-control data select2 " name="utilisateur" multiple="multiple"
                id="utilisateur">
                {% for utilisateur in utilisateurs %}
                <option value="{{ utilisateur.username }}">
                    {{ utilisateur.username }}
                </option>
                {% endfor %}
            </select>
        </div>
    </div>

    <div class='col-2'>
        <div id='submitSearchDemandeLivraison' class="btn btn-primary ">
            <i class="fas fa-filter mr-2"></i>
            Filtrer
        </div>
    </div>
</div>
{#fermeture des filtres#}
{#ouverture d'un nouveau container pour aligner sur tableau#}
<div class="container-fluid">
    
        <h1>Demandes de livraison</h1>

        <div class="zone-actions col-12 mb-5">
            <div href="" data-toggle="modal" data-target="#modalNewDemande" class="btn btn-primary"
                onclick='initNewLivraisonEditor("#modalNewDemande")'>
                <span class="fa fa-plus mr-2"></span>Nouvelle demande
            </div>
        </div>

        <div class="zone-affichage col-12">
            <table id="table_demande" class="table table-striped table-bordered w-100">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Demandeur</th>
                        <th>Numéro</th>
                        <th>Statut</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>

        <div class="actions-secondaires col-12"></div>
   
</div>
