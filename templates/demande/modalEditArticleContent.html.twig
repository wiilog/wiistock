<div class="form-group w-100 mb-3">
    <label class="wii-field-name" for="reference" title="référence">
        {{ trans('Stock', 'Références', 'référence', false) }}
    </label>
    <select disabled
            class="ajax-autocomplete data form-control"
            id='referenceEdit'
            name='reference'>
        <option class="refAjax" value="{{ line.reference.id}}">{{ line.reference }}</option>
    </select>
</div>
<div class="form-group mb-3">
    <label class="wii-field-name" for="quantite">Quantité*</label>
    <input type="number"
           class="data form-control needed"
           name="quantite"
           value="{{ line.quantityToPick }}"
           min="1"
           required
           max={{ maximum }}/>
</div>
{% if showTargetLocationPicking is defined and showTargetLocationPicking and line.reference.typeQuantite == constant('App\\Entity\\ReferenceArticle::QUANTITY_TYPE_ARTICLE') %}
<div class="form-group mt-2">
    <label class="wii-field-name">Emplacement cible picking</label>
    <select data-s2="location" class="form-control data" name="target-location-picking">
        <option selected value="{{ line.targetLocationPicking.id }}">{{ line.targetLocationPicking.label }}</option>
    </select>
</div>
{% endif %}
