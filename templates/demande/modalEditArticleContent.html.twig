<div class="form-group w-100 mb-3">
    <label for="reference" title="référence">
        {{ 'reference.référence'|trans }}
    </label>
    <select disabled
            class="ajax-autocomplete data form-control"
            id='referenceEdit'
            name='reference'>
        <option class="refAjax" value="{{ line.reference.id}}">{{ line.reference }}</option>
    </select>
</div>
<div class="form-group mb-3">
    <label for="quantite">Quantité*</label>
    <input type="number"
           class="data form-control needed"
           name="quantite"
           value="{{ line.quantityToPick }}"
           min="1"
           required
           max={{ maximum }}/>
</div>
