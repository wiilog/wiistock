<div class="d-flex">
    <div class="dropdown dropright {{ not modifiable ? 'd-none' }}">
        {% include 'datatable/dotsRow.html.twig' %}
        <div class="dropdown-menu dropdown-follow-gt pointer">
            {% if modifiable %}
                {% if name == reference %}
                    <div class="d-none">
                        <div class="btn btn-col-action action-on-click" data-id='{{ id }}' data-target='#modalEditArticle' data-toggle='modal'
                             onclick="editRow($(this), Routing.generate('demande_article_api_edit', true), $('#modalEditArticle'), $('#submitEditArticle'), true)">
                            <i class='fas fa-pencil-alt'></i>
                        </div>
                    </div>
                {% endif %}
                <div class="dropdown-item d-flex align-items-center"
                     onclick="deleteRowDemande($(this), $('#modalDeleteArticle'), $('#submitDeleteArticle'))" data-id='{{ id }}'
                     data-name='{{ name }}' data-target='#modalDeleteArticle' data-toggle='modal'>
                    <span class="wii-icon wii-icon-trash-black mr-2"></span>Supprimer
                </div>
            {% else %}
                {% if refArticleId is defined %}
                    <div class="d-none">
                        <div class="btn btn-col-action action-on-click" data-id='{{ refArticleId }}' data-target='#modalShowRefArticle'
                             data-toggle='modal'
                             onclick="showRow($(this), Routing.generate('reference_article_show', true), $('#modalShowRefArticle'))">
                            <i class='fas fa-eye'></i>
                        </div>
                    </div>
                {% else %}
                    <div class="d-none">
                        <div class="btn btn-col-action action-on-click" data-id='{{ articleId }}' data-target='#modalShowArticle' data-toggle='modal'
                             onclick="showRow($(this), Routing.generate('article_show', true), $('#modalShowArticle'))">
                            <i class='fas fa-eye'></i>
                        </div>
                    </div>
                {% endif %}
            {% endif %}
        </div>
    </div>
</div>

