<div class="form-group w-100 mt-2">
    <label class="wii-field-name" for="code">Code article*</label>
    <select class="form-control ajax-autocomplete-article data select2" id="article"
            onchange="ajaxEditArticle($(this))" name="article">
        <option value="">Choisir un article</option>
        {% set index = 0 %}
        {% for article in articles | filter(v => not v.currentLogisticUnit)%}
            {% if article.id not in articleIdsInRequest %}
                <option value="{{ article.id }}"
                        {{ preselect and index == 0 ? 'selected' }}>
                    {{ article.barCode }}
                </option>
                {% set index = index + 1 %}
            {% endif %}
        {% endfor %}
    </select>
</div>
<div id='quantityToTake' class="form-group {{ preselect ? '' : 'd-none'}} mt-2">
    <label class="wii-field-name" for="quantity-to-deliver">Quantité à livrer*</label>
    <input class="form-control data needed"
           type="number"
           {% if needsQuantitiesCheck ?? false %}
               min="1"
               max="{{ maximum }}"
           {% endif %}
           id="quantity-to-deliver"
           name="quantity-to-pick"
           value="0">
</div>
