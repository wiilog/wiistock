<!-- Modale Ajout d'article -->
<div class="modal fade" id="modalNewArticle" role="dialog" aria-labelledby="modalAddArticleTitle"
     aria-hidden="true" data-collecte-id="{{ demande.id }}">
    <div class="modal-dialog  modal-xl" role="document">
        <div class="modal-content">
            {% include 'utils/modal/header.html.twig' with {
                title: "Ajouter un article"
            } %}

            <div class="modal-body modal-input">
                <form class="row">
                    <label for="reference"  class="wii-field-name col-12 mt-2" title="référence">
                        {{ trans('Stock', 'Références', 'référence', false) }}*
                    </label>
                    <div class="form-group col-12">
                        <select class="ajax-autocomplete data w-100 form-control needed"
                            onchange="ajaxGetAndFillArticle($(this))" id="reference"
                            name="referenceArticle">
                        </select>
                    </div>
                    <div id='selection' class="col-12 clear">

                    </div>
                    <div id='editNewArticle' class="col-12 clear">

                    </div>
                </form>
            </div>
            {% include 'utils/modal/footer.html.twig' with {
                classes: 'd-none',
                elements: [
                    {classes: 'btn btn-outline-secondary', dismiss: true, text: 'Annuler'},
                    {classes: 'btn btn-success data', text: 'Ajouter', value: demande.id, name: 'livraison', id: 'submitNewArticle'}
                ],
            } %}

        </div>
    </div>
    <input type="hidden" name="delivery-request-id" value="{{ demande.id }}">
</div>
