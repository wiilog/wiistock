<div class="d-flex">
    <div class="dropdown dropright">
        {% include 'datatable/dotsRow.html.twig' %}
        <div class="dropdown-menu dropdown-follow-gt pointer">
            <div class="d-none">
                {%  if request_template.type.label != 'service' %}
                    <a class="btn btn-col-action action-on-click" href="{{ path('request_template_show', {requestTemplate: request_template.id}) }}">
                    </a>
                {% endif %}
            </div>
            <div class="dropdown-item" data-target="#modalEditRequestTemplate" data-toggle="modal"
                 onclick="editRow($(this), Routing.generate('request_template_edit_api', true), $('#modalEditRequestTemplate'), $('#submitEditRequestTemplate'))"
                 data-id="{{ request_template.id }}">
                <i class="fas fa-edit mr-2"></i>Modifier
            </div>
            <div class="dropdown-item" data-target="#modalDeleteRequestTemplate" data-toggle="modal"
                 onclick="editRow($(this), Routing.generate('request_template_delete_api', true), $('#modalDeleteRequestTemplate'), $('#submitDeleteRequestTemplate'))"
                 data-id="{{ request_template.id }}">
                <i class="fas fa-trash mr-2"></i>Supprimer
            </div>
        </div>
    </div>
</div>

