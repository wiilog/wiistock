{% import 'form.html.twig' as form %}

<div class="wii-section">
    <div class="row">
        <div class="form-group w-fit-content col-6">
            <div class="row">
                <div class="col-auto">
                    {{ form.image(setting('FILE_WEBSITE_LOGO'), 'Logo sur web entête', false, setting_value('FILE_WEBSITE_LOGO'), {
                        defaultValue: setting('DEFAULT_WEBSITE_LOGO_VALUE'),
                    }) }}
                </div>
            </div>
        </div>

        <div class="form-group w-fit-content col-6">
            <div class="row">
                <div class="col-auto">
                    {{ form.image(setting('FILE_MOBILE_LOGO_LOGIN'), 'Logo sur nomade page connexion', false, setting_value('FILE_MOBILE_LOGO_LOGIN'), {
                        defaultValue: setting('DEFAULT_MOBILE_LOGO_LOGIN_VALUE'),
                    }) }}
                </div>
            </div>
        </div>

        <div class="form-group w-fit-content col-6">
            <div class="row">
                <div class="col-auto">
                    {{ form.image(setting('FILE_EMAIL_LOGO'), 'Logo sur les emails', false, setting_value('FILE_EMAIL_LOGO'), {
                        defaultValue: setting('DEFAULT_EMAIL_LOGO_VALUE'),
                    }) }}
                </div>
            </div>
        </div>

        <div class="form-group w-fit-content col-6">
            <div class="row">
                <div class="col-auto">
                    {{ form.image(setting('FILE_MOBILE_LOGO_HEADER'), 'Logo sur nomade entête', false, setting_value('FILE_MOBILE_LOGO_HEADER'), {
                        defaultValue: setting('DEFAULT_MOBILE_LOGO_HEADER_VALUE'),
                    }) }}
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group w-fit-content col-6">
            {{ form.select(setting('FONT_FAMILY'), 'Choix de la police', true, {
                items: setting('FONTS'),
                value: setting_value('FONT_FAMILY')
            }) }}
        </div>
    </div>

    <div class="row">
        <div class="form-group w-fit-content col-6">
            {{ form.input(setting('MAX_SESSION_TIME'),
                '<span class="wii-field-name">Temps de session en minutes&nbsp;</span><span class="wii-small-text">(maximum 24h)</span>',
                false,
                setting_value('MAX_SESSION_TIME'),
                {
                    tooltip: {
                        text: "Ce paramètre définit le temps d'inactivité maximum en minutes avant que l'utilisateur soit
                            déconnecté. Le paramétrage ne prendra effet qu'à la prochaine connexion de l'utilisateur.",
                    }
                }) }}
        </div>
    </div>
</div>
