{% import 'form.html.twig' as form %}

<div class="row">
    <div class="form-group col-md-6 col-12">
        {% set value = mailer_server.smtp is defined ? mailer_server.smtp %}
        {{ form.input('MAILER_URL', 'Serveur SMTP', true, value, {labelClass: 'wii-field-name w-75'}) }}
    </div>
    <div class="form-group col-md-6 col-12">
        {{ form.input('MAILER_PORT', "Port", true, mailer_server.port, {labelClass: 'wii-field-name w-75'}) }}
    </div>
</div>

<div class="row">
    <div class="form-group col-md-6 col-12">
        {% set value = mailer_server.user is defined ? mailer_server.user %}
        {{ form.input('MAILER_USER', "Nom d'utilisateur", true, value, {labelClass: 'wii-field-name w-75'}) }}
    </div>
    <div class="form-group col-md-6 col-12">
        {{ form.input('MAILER_PASSWORD', "Mot de passe", true, mailer_server.password, {
            labelClass: 'wii-field-name w-75',
            type: 'password'
        }) }}
    </div>
</div>

<div class="row">
    <div class="form-group col-md-6 col-12">
        {{ form.input('MAILER_PROTOCOL', "Protocole", true, mailer_server.protocol, {labelClass: 'wii-field-name w-75'}) }}
    </div>
</div>

<div class="row">
    <div class="form-group col-md-6 col-12">
        {{ form.input('MAILER_SENDER_NAME', "Nom expéditeur", true, mailer_server.senderName, {labelClass: 'wii-field-name w-75'}) }}
    </div>
    <div class="form-group col-md-6 col-12">
        {{ form.input('MAILER_SENDER_MAIL', "Adresse mail expéditeur", true, mailer_server.senderMail, {labelClass: 'wii-field-name w-75'}) }}
    </div>
</div>
