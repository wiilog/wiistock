{% if export.error %}
    <span class="wii-icon wii-icon-info wii-icon-17px bg-black has-tooltip" title="{{ export.error }}" style="margin-bottom: -4px"></span>
{% elseif export.status.code == constant('App\\Entity\\Export::STATUS_SCHEDULED') %}
    <div class="d-flex">
        <div class="dropdown dropright">
            {% include 'datatable/dotsRow.html.twig' %}
            <div class="dropdown-menu dropdown-follow-gt pointer">
                {% if hasRight(constant('App\\Entity\\Menu::PARAM'), constant('App\\Entity\\Action::EDIT')) %}
                    <div onclick="displayExportModal({{ export.id }})"
                         class="dropdown-item">
                        <i class="fas fa-pencil-alt mr-2"></i> Modifier l'export
                    </div>
                {% endif %}
                {% if hasRight(constant('App\\Entity\\Menu::PARAM'), constant('App\\Entity\\Action::DELETE')) %}
                    <div class="dropdown-item cancel-export"
                         onclick="cancelExport({{ export.id }})">
                        <i class="wii-icon wii-icon-trash-black mr-2"></i>Supprimer la planification
                    </div>
                {% endif %}

                <div class="dropdown-item force-export"
                     onclick="forceStartExport({{ export.id }})">
                    <i class="fas fa-download mr-2"></i> Forcer l'export
                </div>
            </div>
        </div>
    </div>
{% endif %}
