{% if true %}
    <div class="d-flex">
        <div class="dropdown dropright">
            {% include 'datatable/dotsRow.html.twig' %}
            <div class="dropdown-menu dropdown-follow-gt pointer">
                {% if hasRight(constant('App\\Entity\\Menu::PARAM'), constant('App\\Entity\\Action::EDIT')) %}
                    <div data-id='{{ export.id }}' data-target='#modalEditExport' data-toggle='modal'
                         class='action-on-click d-none'
                         onclick="editRow($(this), Routing.generate('export_edit_api', true), $('#modalEditExport'), $('#submitEditExport'))">
                        <i class="fas fa-pencil-alt"></i> Modifier l'export
                    </div>
                {% endif %}
                {% if hasRight(constant('App\\Entity\\Menu::PARAM'), constant('App\\Entity\\Action::DELETE')) %}
                    <div data-id='{{ export.id }}' data-target='#modalDeleteExport' data-toggle='modal'
                         onclick="checkAndDeleteRow($(this), '#modalDeleteExport', 'export_check_delete', '#submitDeleteExport')"
                         class="dropdown-item">
                        <i class="wii-icon wii-icon-trash text-primary mr-2"></i> Supprimer la planification
                    </div>
                {% endif %}

                <div class="dropdown-item force-export" data-id="{{ export.id }}">
                    <i class="fas fa-download mr-2"></i> Forcer l'export
                </div>
            </div>
        </div>
    </div>
{% endif %}
