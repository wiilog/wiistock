{% import 'form.html.twig' as form %}

<div class="frequency every-month-frequency">
    <div class="col-12 p-3 form-inline form-group">
        <label class="wii-field-name">Démarrer le*</label>
        <input type="datetime-local"
               class="form-control form-control-sm ml-2 frequency-data"
               name="monthly-start-on"
               title="Démarrer le"
               placeholder="jj/mm/aaaa"
               min="now"
               value=""/>
    </div>

    <div class="form-inline">
        <div class="col-12 p-3">
            <div class="input-group flex-nowrap no-gutters mb-3">
                {% set date = [] %}
                {% for month in 1..12 %}
                    {% set label = month ~ "/1/2022" %}
                    {% set date = date|merge([{label: label | format_date('none', 'MMMM', null, 'gregorian', 'fr') | capitalize, value: month}]) %}
                {% endfor %}
                {{ form.select('monthly-frequency-months', 'Mois', false, {
                    items: date,
                    multiple: true
                }) }}
                <div class="input-group-append col-4">
                    <button class="btn btn-primary select-all-options w-100" type="button">Tous les mois</button>
                </div>
            </div>
            {% set days = [] %}
            {% for i in 1..31 %}
                {% set days = days|merge([{label: i , value: i}]) %}
            {% endfor %}
            {% set days = days|merge([{label: 'Dernier' , value: 'Dernier'}]) %}
            {{ form.select('monthly-frequency-days-month', 'Jours', false, {
                items: days,
                multiple: true
            }) }}
            <div class="pt-3">
                Heure d'exécution :
                <input type="time"
                       name="monthly-frequency-time"
                       class="form-control form-control-sm mx-2 w-px-100 mb-2 frequency-data"
                       data-label="Heures et minutes"
                       value="">
            </div>
        </div>
    </div>
</div>
