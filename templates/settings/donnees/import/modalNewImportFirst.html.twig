<div class="row">
    <input type="hidden"
           class="data"
           name="sourceImport"
           value="{{ import ? (import.id) }}"/>
    <div class="form-group col-8">
        <label class="wii-field-name">Nom de l'import</label>
        <input type="text"
               class="form-control data needed"
               name="label"
               value="{{ import ? ('Copie de ' ~ import.label) }}">
    </div>
    <div class="form-group col-4">
        <label class="wii-field-name">Type de données à importer</label>
        <select class="form-control data needed"
                name="entity"
                onchange="importTemplateChanged($(this))">
            <option></option>
            {% for value, label in constant('App\\Entity\\Import::ENTITY_LABEL') %}
                <option value="{{ value }}" {{ import and import.entity == value ? 'selected'}} >{{ label }}</option>
            {% endfor %}
        </select>
    </div>
</div>

<div class="recipient">
</div>

<div class="delete-differential-data row mt-2 mb-3 ml-1 d-none">
</div>

<div class="row">
    <div class="form-group col-12">
        <div>
            {% include 'attachment/attachment.html.twig' with {
                'isNew': true,
                'text': 'Faites glisser votre fichier csv',
                'unique': true
            } %}
        </div>
    </div>
</div>

<div class="row">
    <p class="col">Attention : Le délimiteur est le point virgule et l'encodage UTF-8.</p>
</div>

<div class="row mt-3">
    <p class="class-12" id="linkToTemplate"></p>
</div>
