<div class="modal fade"
     id="modalNewUser"
     role="dialog"
     aria-labelledby="dataModalCenterTitle"
     aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
        <div class="modal-content">
            {% include 'utils/modal/header.html.twig' with {
                title: "Nouvel utilisateur"
            } %}

            <div class="modal-body modal-input p-0">
                {% include 'settings/utilisateurs/utilisateurs/form.html.twig' with {
                    user: newUser,
                    languages,
                    dateFormats,
                    dispatchBusinessUnits,
                    deliveryTypes,
                    dispatchTypes,
                    handlingTypes,
                } %}
            </div>
            {% include 'utils/modal/footer.html.twig' with {
                elements: [
                    {classes: 'btn btn-outline-secondary', dismiss: true, text: 'Annuler'},
                    {classes: 'btn btn-success submit-button', type: 'submit', text: 'Enregistrer'}
                ],
            } %}

        </div>
    </div>
</div>
