<div class="modal fade"
     id="modalNewUser"
     role="dialog"
     aria-labelledby="dataModalCenterTitle"
     aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title wii-title">Nouvel utilisateur</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body modal-input p-0">
                {% include 'settings/utilisateurs/utilisateurs/form.html.twig' with {user: newUser} %}
            </div>
            <div class="error-msg"></div>
            <div class="modal-footer">
                <div class="btn btn-outline-secondary" data-dismiss="modal">Annuler</div>
                <div class="btn btn-success submit-button">Enregistrer</div>
            </div>
        </div>
    </div>
</div>
