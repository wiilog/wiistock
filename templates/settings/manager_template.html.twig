{% import 'form.html.twig' as form %}

<div class="w-100">
    <div class="wii-box mt-15px">
        <div class="header wii-title">{% block title %}{% endblock %}</div>
        <div class="focus-shadow p-3">
            <div class="row">
                <div class="col">{% block filters %}{% endblock %}</div>
                <div class="ml-auto col-auto">
                    {% block button %}{% endblock %}
                </div>
            </div>
        </div>
    </div>

    <div class="wii-box">
        <div class="row py-2">
            <div class="ml-3 col-auto d-flex justify-content-center align-items-center">
                <button class="btn btn-silent delete-main-entity">
                    <i class="wii-icon wii-icon-trash text-primary"></i>
                </button>
            </div>
            <div class="col">
                <div class="row main-entity-content"></div>
            </div>
            <div class="mr-3 col-auto d-flex justify-content-center align-items-center">
                <button class="btn btn-primary edit-button">
                    <i class="fa fa-pen mr-2"></i> Modifier
                </button>
            </div>
        </div>

        <div class="subtitle">{% block subtitle %}{% endblock %}</div>

        <div class="p-3">
            <div class="row">
                <div class="col-12">
                    <table class="table subentities-table w-100"></table>
                </div>
            </div>
        </div>

        {% block footer %}{% endblock %}

        <input type="hidden" name="default-value-template" value="{{ form.switch('defaultValue', null, false, [
            {label: 'Oui', value: '1'},
            {label: 'Non', value: '0'},
            {label: 'Aucune', value: null, checked: true},
        ]) | json_encode }}">
    </div>
</div>


