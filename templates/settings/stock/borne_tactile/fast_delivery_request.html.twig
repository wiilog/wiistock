{% import 'form.html.twig' as form %}

<div class="wii-section-title">Apparence générale</div>
<div class="wii-section touch-terminal">
    <div class="row">
        <div class="form-group w-fit-content col-4">
            <div class="row">
                <div class="col-auto">
                    {{ form.image(setting('GENERAL_TOP_LEFT_LOGO'), 'Logo en haut à gauche', false, setting_value('GENERAL_TOP_LEFT_LOGO'), {
                        defaultValue: setting_value('GENERAL_TOP_LEFT_LOGO'),
                    }) }}
                </div>
            </div>
        </div>
        <div class="form-group w-fit-content col-4">
            <div class="row">
                <div class="col-auto">
                    {{ form.image(setting('GENERAL_TOP_RIGHT_LOGO'), 'Logo en haut à droite', false, setting_value('GENERAL_TOP_RIGHT_LOGO'), {
                        defaultValue: setting_value('GENERAL_TOP_RIGHT_LOGO'),
                    }) }}
                </div>
            </div>
        </div>
        <div class="form-group w-fit-content col-4">
            <div class="wii-field-name">Message d'information*</div>
            {{ form.textarea(setting('GENERAL_INFORMATION_MESSAGE'), null, true, setting_value('GENERAL_INFORMATION_MESSAGE')) }}
        </div>
    </div>
</div>

<div class="wii-section-title">Liens pour tablette</div>
<div class="wii-section">
    <div class="row wii-page-card-header">
        <div class="col-auto ml-auto">
            <div class="add-row">
                <button class="btn btn-primary d-none add-row-button d-flex align-items-center">
                    <span class="wii-icon wii-icon-plus mr-2"></span>Ajouter un lien externe
                </button>
            </div>
        </div>
    </div>

    <table id="deliveryStationLineTable" data-table-processing="deliveryStationLine"></table>
</div>

