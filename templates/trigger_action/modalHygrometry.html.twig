{% set config = triggerAction is defined and triggerAction ? triggerAction.config : [] %}
<div class="col-12">
    <div class="row">
        {% include 'trigger_action/modalMultipleTemperatures.html.twig' %}
    </div>
    <div class="row">
        <div class="col-6 pl-0">
            <div class="form-group col-10">
                <label class="wii-field-name">Hygrométrie*</label>
                <div class="d-flex align-items-center">
                    <label class="wii-field-name" style="white-space: nowrap">Si hygrométrie supérieure à </label>
                    <input type="number" class="data form-control needed w-120px mx-2" value=""
                           name="sensorHygrometryLimitHigher">
                    <label>%</label>
                </div>
            </div>
            <div class="form-group col-10">
                <label class="wii-field-name">Type de modèle*</label>
                <div class="w-100">
                    <select class="form-control data needed" name="templateTypeHigherHygro" onchange="onTemplateTypeChange($(this))">
                        <option value=""></option>
                        {% for templateType, index in templateTypes %}
                            {% set selected = triggerAction is defined and (
                                (index == constant('App\\Entity\\IOT\\TriggerAction::ALERT') and triggerAction.alert)
                                or (index == constant('App\\Entity\\IOT\\TriggerAction::REQUEST') and triggerAction.request)
                                ) %}
                            <option {{ selected ? 'selected' }} value="{{ index }}">{{ templateType }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
            <div class="form-group col-10">
                <label class="wii-field-name">Modèle*</label>
                <div class="w-100">
                    <select disabled class="form-control data needed" name="templatesForHigherHygro">
                    </select>
                </div>
            </div>
        </div>

        <div class="col-6" style="border-left: black solid 1px">
            <div class="form-group col-10" >
                <label class="wii-field-name" style="color: transparent">Hygrométrie*</label>
                <div class="d-flex align-items-center">
                    <label class="wii-field-name" style="white-space: nowrap">Si hygrométrie inférieure à </label>
                    <input type="number" class="data form-control needed w-120px mx-2" value=""
                           name="sensorHygrometryLimitLower">
                    <label>%</label>
                </div>
            </div>
            <div class="form-group col-10">
                <label class="wii-field-name">Type de modèle*</label>
                <div class="w-100">
                    <select class="form-control data needed" name="templateTypeLowerHygro" onchange="onTemplateTypeChange($(this))">
                        <option value=""></option>
                        {% for templateType, index in templateTypes %}
                            {% set selected = triggerAction is defined and (
                                (index == constant('App\\Entity\\IOT\\TriggerAction::ALERT') and triggerAction.alert)
                                or (index == constant('App\\Entity\\IOT\\TriggerAction::REQUEST') and triggerAction.request)
                                ) %}
                            <option {{ selected ? 'selected' }} value="{{ index }}">{{ templateType }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
            <div class="form-group col-10">
                <label class="wii-field-name">Modèle*</label>
                <div class="w-100">
                    <select disabled class="form-control data needed" name="templatesForLowerHygro">
                    </select>
                </div>
            </div>
        </div>
    </div>
</div>
