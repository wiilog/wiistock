{% set config = triggerAction is defined and triggerAction ? triggerAction.config : [] %}
<div class="col-6">
    <div class="form-group col-10">
        <label class="wii-field-name">Température*</label>
        <div class="d-flex align-items-center">
            <label class="wii-field-name" style="white-space: nowrap">Si température supérieure à </label>
            <input type="number" class="data form-control needed w-120px mx-2" value="{{ config is not empty ? config[0]['temperature'] }}"
                   name="sensorTemperatureLimitHigher">
            <label>°C</label>
        </div>
    </div>
    <div class="form-group col-10">
        <label class="wii-field-name">Type de modèle*</label>
        <div class="w-100">
            <select class="form-control data needed" name="templateTypeHigherTemp" onchange="onTemplateTypeChange($(this))">
                <option value=""></option>
                {% for templateType, index in templateTypes %}
                    {% set selected = triggerAction is defined and (
                        (index == constant('App\\Entity\\IOT\\TriggerAction::ALERT') and triggerAction.alert)
                        or (index == constant('App\\Entity\\IOT\\TriggerAction::REQUEST') and triggerAction.request)
                        ) %}
                    <option {{ selected ? 'selected' }} value="{{ index }}">{{ templateType }}</option>
                {% endfor %}
            </select>
        </div>
    </div>
    <div class="form-group col-10">
        <label class="wii-field-name">Modèle*</label>
        <div class="w-100">
            <select disabled class="form-control data needed" name="templatesForHigherTemp">
            </select>
        </div>
    </div>
</div>

<div class="col-6" style="border-left: black solid 1px">
    <div class="form-group col-10" >
        <label class="wii-field-name" style="color: transparent">Température*</label>
        <div class="d-flex align-items-center">
            <label class="wii-field-name" style="white-space: nowrap">Si température inférieure à </label>
            <input type="number" class="data form-control needed w-120px mx-2" value="{{ config is not empty ? config[1]['temperature'] }}"
                   name="sensorTemperatureLimitLower">
            <label>°C</label>
        </div>
    </div>
    <div class="form-group col-10">
        <label class="wii-field-name">Type de modèle*</label>
        <div class="w-100">
            <select class="form-control data needed" name="templateTypeLowerTemp" onchange="onTemplateTypeChange($(this))">
                <option value=""></option>
                {% for templateType, index in templateTypes %}
                    {% set selected = triggerAction is defined and (
                        (index == constant('App\\Entity\\IOT\\TriggerAction::ALERT') and triggerAction.alert)
                        or (index == constant('App\\Entity\\IOT\\TriggerAction::REQUEST') and triggerAction.request)
                        ) %}
                    <option {{ selected ? 'selected' }} value="{{ index }}">{{ templateType }}</option>
                {% endfor %}
            </select>
        </div>
    </div>
    <div class="form-group col-10">
        <label class="wii-field-name">Modèle*</label>
        <div class="w-100">
            <select disabled class="form-control data needed" name="templatesForLowerTemp">
            </select>
        </div>
    </div>
</div>
