{% extends 'layout.html.twig' %}

{% block title %}Ordres de préparation{% endblock %}

{% block page_filter %}
    {% include 'filters/filtersDemands.html.twig' with {
        page: 'PAGE_PREPA',
        tableSelector: '#table_id',
        disabled: filtersDisabled,
        displayDemandFilter: displayDemandFilter
    } %}
{% endblock %}

{% block page_content %}
    {% set pageFilteredByDemand = (
        (filterDemandId is defined and filterDemandId is not null) and
        (filterDemandValue is defined and filterDemandValue is not null)
    ) %}
    <div class="col-12">
        <h1>Ordres de préparation</h1>
    </div>

    <div class="col-12">
        <div class="row">
            {% if hasRight(constant('App\\Entity\\Menu::ORDRE'), constant('App\\Entity\\Action::EXPORT')) %}
                <div class="btn btn-primary" onclick="generateCSV('get_ordres_prepa_for_csv', 'ordre-prepa')">
                    <i class="fa fa-file-csv mr-2"></i>Exporter au format CSV
                </div>
            {% endif %}
            {% if pageFilteredByDemand %}
                <div class="col-auto">
                    <a href="{{ path('preparation_index') }}" class='btn btn-primary btn-action'>Voir tous les ordres</a>
                    <a href="{{ path('demande_show', {'id': filterDemandId}) }}" class='btn btn-action'>Retour à la demande</a>
                </div>
            {% endif %}
        </div>
    </div>

    <div class="d-none justify-content-center" id="spinner">
        <div class="spinner-border sizeLoader" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>

    <div class="col-12 mt-5">
        <table id="table_id" class="table table-striped table-bordered w-100">
        </table>
    </div>
    {% if pageFilteredByDemand %}
        <input hidden id="filterDemandId" value="{{ filterDemandId }}"/>
        <input hidden id="filterDemandValue" value="{{ filterDemandValue }}"/>
    {% endif %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>let id = 0;</script>
    <script src="{{ asset('js/preparation.js') }}?{{ date().timestamp }}"></script>
{% endblock %}
