{% extends 'layout.html.twig' %}

{% block title %}Ordre | Préparation{% endblock %}

{% block page_filter %}
    {% include 'filters/filtersDemands.html.twig' with {
        page: 'PAGE_PREPA',
        tableSelector: '#table_id',
        disabled: filtersDisabled,
        displayDemandFilter: displayDemandFilter
    } %}
{% endblock %}
{% block page_content %}
    {% set pageFilteredByDemand = (
        (filterDemandId is defined and filterDemandId is not null) and
        (filterDemandValue is defined and filterDemandValue is not null)
    ) %}
    <div class="m-4 wii-page-card">
        <div class="row wii-page-card-header">
            <div class="col-auto ml-auto">
                {% if pageFilteredByDemand %}
                    <div class="btn-group">
                        {% if hasRight(constant('App\\Entity\\Menu::ORDRE'), constant('App\\Entity\\Action::EXPORT')) %}
                            <div class="btn btn-primary btn-ripple btn-ripple split-button"
                                 onclick="generateCSV('get_ordres_prepa_for_csv', 'ordre-prepa')">
                                <i class="fa fa-file-csv mr-2"></i>Exporter au format CSV
                            </div>
                        {% endif %}
                        <button type="button"
                                class="btn btn-primary btn-ripple dropdown-toggle dropdown-toggle-split"
                                data-toggle="dropdown"
                                aria-haspopup="true"
                                aria-expanded="false">
                            <span class="fa fa-angle-down"></span>
                        </button>
                        <div class="dropdown-menu dropdown-follow-gt dropdown-menu-right pointer">
                            <a href="{{ path('preparation_index') }}" class='dropdown-item'>Voir tous les ordres</a>
                            <a href="{{ path('demande_show', {'id': filterDemandId}) }}" class='dropdown-item'>Retour à la demande</a>
                        </div>
                    </div>
                {% else %}
                    {% if hasRight(constant('App\\Entity\\Menu::ORDRE'), constant('App\\Entity\\Action::EXPORT')) %}
                        <div class="btn btn-primary btn-ripple" onclick="generateCSV('get_ordres_prepa_for_csv', 'ordre-prepa')">
                            <i class="fa fa-file-csv mr-2"></i>Exporter au format CSV
                        </div>
                    {% endif %}
                {% endif %}
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="d-none justify-content-center" id="spinner">
                    <div class="spinner-border sizeLoader" role="status">
                        <span class="sr-only">Loading...</span>
                    </div>
                </div>
                <table id="table_id" class="table w-100">
                </table>
            </div>
        </div>
    </div>
    {% if pageFilteredByDemand %}
        <input hidden id="filterDemandId" value="{{ filterDemandId }}"/>
        <input hidden id="filterDemandValue" value="{{ filterDemandValue }}"/>
    {% endif %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/pages/preparation.js') }}?{{ date().timestamp }}"></script>
{% endblock %}
