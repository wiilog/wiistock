{% import 'form.html.twig' as form %}
<div class="modal fade" id="modalEditPreparation" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title wii-title">Modifier la préparation</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body modal-input container-fluid">
                {% set expectedAtValue = preparation.expectedAt ? preparation.expectedAt|date('Y-m-d') %}
                {{ form.input('expectedAt', 'Date de préparation', true, expectedAtValue, {
                    type: 'date',
                    min: 'now' | date('Y-m-d'),
                }) }}
                <input type="hidden" class="data" name="id" value="{{ preparation ? preparation.id }}">
            </div>
            <div class="error-msg"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Annuler</button>
                <button type="submit" class="btn btn-success">Enregistrer
                </button>
            </div>
        </div>
    </div>
</div>
