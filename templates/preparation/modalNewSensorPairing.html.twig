<form class="modal fade" id="modalNewSensorPairing" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
        <div class="modal-content">
            {% include 'utils/modal/header.html.twig' with {
                title: "Associer un capteur"
            } %}

            <div class="modal-body modal-input container-fluid">
                <div class="row">
                    <div class="form-group col-md-4 col-12">
                        <label>Capteur*</label>
                        <div class="w-100">
                            <select class="form-control data input" name="sensorWrapper" data-s2="sensorWithoutPairing" data-placeholder="Sélectionner un capteur..."
                                    onchange="onDeviceChanged($(this))">
                            </select>
                        </div>
                    </div>
                    <div class="col-2 d-flex justify-content-center my-auto">
                        <label>OU</label>
                    </div>
                    <div class="form-group col-md-4 col-12">
                        <label>Code capteur*</label>
                        <div class="w-100">
                            <select class="form-control data" name="sensor" data-s2="sensorCodeWithoutPairing" data-placeholder="Sélectionner un code capteur..."
                                    onchange="onDeviceChanged($(this))">
                            </select>
                        </div>
                    </div>
                </div>
                <p class="font-italic">Le capteur sera dissocié automatiquement à la fin de la livraison</p>
            </div>

            <div class="error-msg"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Annuler</button>
                <input type="hidden" class="data" name="orderID" value="{{ preparation.id }}">

                <button id="submitNewSensorPairing"
                        type="button"
                        class="btn btn-success data">
                    Enregistrer
                </button>
            </div>
        </div>
    </div>
</form>
