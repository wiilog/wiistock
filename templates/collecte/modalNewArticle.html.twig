<!-- Modale Ajout d'article -->
<div method="" class="modal fade" id="modalNewArticle" role="dialog" aria-labelledby="modalAddArticleTitle"
    aria-hidden="true" data-collecte-id="{{ collecte.id }}">
    <div class="modal-dialog  modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Ajouter un article</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body modal-input container-fluid">
                <form class="row">
                    <div class="form-group col-12 d-flex w-100 mb-3">
                        <label for="reference" title="référence">
                            {{ 'reference.référence'|trans }}*
                        </label>
                        <select class="ajax-autocomplete data form-control needed"
                            onchange="ajaxGetCollecteArticle($(this))" id="reference" name="referenceArticle">
                        </select>
                    </div>
                    <div id='selection' class="col-12 clear p-0">

                    </div>
                    <div id='editNewArticle' class="col-12 clear">

                    </div>
                </form>
            </div>
            <div class="error-msg p-4"></div>
            <div class="modal-footer d-none">
                <div class="btn" data-dismiss="modal">Annuler</div>
                <button id="submitNewArticle"  onclick="setCommentaire('.editor-container-edit')" name="collecte" value="{{collecte.id}}" type="button"
                    class="btn data btn-success">Ajouter</button>
            </div>
        </div>
    </div>
</div>
