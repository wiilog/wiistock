<form method="" class="modal fade" id="modalEditCollecte" role="dialog" aria-labelledby="dataModalCenterTitle"
    {{ not collecte.filled ? 'data-backdrop="static"' }}
aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Modifier une collecte</h5>
                {% if collecte.filled %}
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                {% endif %}
            </div>
            <div class="modal-body modal-input container-fluid"></div>
            <div class="error-msg"></div>
            <div class="modal-footer">
                {% if collecte.filled %}
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                {% endif %}
                <button id="submitEditCollecte" type="button" name="collecte" class="btn btn-success data">Enregistrer</button>
            </div>
        </div>
    </div>
</form>
