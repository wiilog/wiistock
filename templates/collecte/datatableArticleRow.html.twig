<div class="d-flex">
    <div class="dropdown dropright {{ not modifiable ? 'd-none' }}">
        {% include 'datatable/dotsRow.html.twig' %}
        <div class="dropdown-menu dropdown-follow-gt pointer">
            {% if modifiable %}
                {% if hasRight(constant('App\\Entity\\Menu::DEM'), constant('App\\Entity\\Action::EDIT')) %}
                    {% if type == 'reference' %}
                        <div class="d-none">
                            <div class="action-on-click" data-id='{{ id }}' data-target='#modalEditArticle'
                                 data-toggle='modal'
                                 onclick="editRow($(this), Routing.generate('collecte_edit_api_article', true), $('#modalEditArticle'), $('#submitEditArticle'))">
                                <i class='fas fa-pencil-alt'></i>
                            </div>
                        </div>
                    {% endif %}
                    <div class="dropdown-item d-flex align-items-center"
                         onclick="deleteRowCollecte($(this), $('#modalDeleteArticle'), $('#submitDeleteArticle'))"
                         data-target='#modalDeleteArticle' data-toggle='modal' data-id='{{ id }}' data-name='{{ name }}'>
                        <span class="wii-icon wii-icon-trash-black mr-2"></span>Supprimer
                    </div>
                {% endif %}
            {% else %}
                {% if refArticleId is defined %}
                    <div class="d-none">
                        <div class="action-on-click" data-id='{{ refArticleId }}' data-target='#modalShowRefArticle'
                             data-toggle='modal'
                             onclick="showRow($(this), Routing.generate('reference_article_show', true), $('#modalShowRefArticle'))">
                            <i class='fas fa-eye'></i>
                        </div>
                    </div>
                {% else %}
                    <div class="d-none">
                        <div class="action-on-click" data-id='{{ id }}' data-target='#modalShowArticle' data-toggle='modal'
                             onclick="showRow($(this), Routing.generate('article_show', true), $('#modalShowArticle'))">
                            <i class='fas fa-eye'></i>
                        </div>
                    </div>
                {% endif %}
            {% endif %}
        </div>
    </div>
</div>
