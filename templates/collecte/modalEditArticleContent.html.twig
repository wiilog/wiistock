<input hidden class="data" name="collecteRef" value="{{collecteRef.id}}">
<div class="form-group w-100 mb-3">
    <label for="reference">Référence</label>
    <select disabled class="ajax-autocomplete data form-control" value='{{collecteRef.referenceArticle.reference}}' id='referenceEdit'
            name='referenceArticle' onclick="Select2.articleReference($(this))">
        <option class="refAjax" value="{{collecteRef.referenceArticle.id}}">{{collecteRef.referenceArticle.reference}}</option>
    </select>
</div>
<div class="form-group mb-3">
    <label for="quantite">Quantité*</label>
    <input class="form-control data needed" type="number" name="quantite" id="quantite"
        value="{{collecteRef.quantite}}" min="1" required="true">
</div>
