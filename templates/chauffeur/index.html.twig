{% extends 'layout.html.twig' %}

{% block title %}Référentiel | Chauffeurs{% endblock %}

{% block page_content %}
    <div class="m-4 wii-page-card">
        {% if hasRight(constant('App\\Entity\\Menu::REFERENTIEL'), constant('App\\Entity\\Action::CREATE')) %}
            <div class="row wii-page-card-header">
                <div class="col-auto ml-auto">
                    <a href=""
                       data-toggle="modal"
                       data-target="#modalNewChauffeur"
                       class="btn btn-primary btn-ripple" onclick="clearModal('#modalNewChauffeur')">
                        <span class="fa fa-plus mr-2"></span>Nouveau chauffeur
                    </a>
                </div>
            </div>
        {% endif %}
        <div class="row">
            <div class="col-12">
                <table id="tableChauffeur_id" class="table w-100"></table>
            </div>
        </div>
    </div>

    {% include "chauffeur/modalDeleteChauffeur.html.twig" %}
    {% include "chauffeur/modalEditChauffeur.html.twig" %}
    {% include "chauffeur/modalNewChauffeur.html.twig" %}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/pages/chauffeur.js') }}?{{ app_last_cache_clear }}"></script>
{% endblock %}
