<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="robots" content="noindex">
    <meta name="googlebot" content="noindex">

    {% set titlePrefix = 'FollowGT' %}
    {% if block("title") is defined and block("title") is not empty %}
        <title>{{ titlePrefix }} | {{ block("title") | striptags }}</title>
    {% else %}
        <title>{{ titlePrefix }}</title>
    {% endif %}

    <link rel="icon" type="image/svg+xml" href="{{ asset('favicon.svg') }}">
    <link rel="alternate icon" href="{{ asset('favicon.ico') }}">
    {# datetime picker #}
    <link rel="stylesheet" href="{{ asset('css/bootstrap-datetimepicker.css') }}"/>
    <link rel="stylesheet" href="{{ asset('css/bootstrap-checkbox.css') }}"/>
    {{ encore_entry_link_tags('app') }}
    <style>
        {% include '@generated/font.css' %}
    </style>
    {% block stylesheets %}{% endblock %}

</head>

<body>
    {% include 'notifications/notification.html.twig' %}
    {% block body %}
    {% endblock %}

    <input type="hidden" id="userDateFormat" value="{{ app.user ? app.user.dateFormat }}">
    <input type="hidden" id="language" value="{{ getLanguage().slug }}">


    {% block javascripts %}
        <script>
            const USER_SLUG = '{{ getLanguage().slug }}';
        </script>

        {# scripts wiilog #}
        {{ encore_entry_script_tags('app') }}
        {{ encore_entry_script_tags('script-wiilog') }}
        {{ encore_entry_script_tags('alerts') }}
        {{ encore_entry_script_tags('translations') }}
        {{ encore_entry_script_tags('datatable') }}
        {{ encore_entry_script_tags('utils') }}
        {{ encore_entry_script_tags('collapsible') }}
        {{ encore_entry_script_tags('script-menu') }}
        {{ encore_entry_script_tags('init-modal') }}
        {{ encore_entry_script_tags('select2-old') }}
        {{ encore_entry_script_tags('iot-common') }}

        {# datetime picker #}
        <script src={{ asset('js/bootstrap-datetimepicker.min.js') }}></script>

        <script type="text/javascript" src="{{ asset('js/js-csv-encoding-master/encoding-indexes.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/js-csv-encoding-master/encoding.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/js-csv-encoding-master/fileSaver.js') }}"></script>


        <script src="{{ asset('generated/translations.js') }}?v={{ date().timestamp }}"></script>
    {% endblock %}

</body>

</html>
