<div class="d-flex">
    <div class="dropdown dropright">
        {% include 'datatable/dotsRow.html.twig' %}
        <div class="dropdown-menu dropdown-follow-gt pointer">

            {% if hasRight(constant('App\\Entity\\Menu::QUALI'), constant('App\\Entity\\Action::EDIT')) %}
                <div class="btn btn-col-action d-none action-on-click" data-toggle='modal' data-target='#modalEditLitige'
                     onclick="editRowLitige($(this),
                             openTableHisto,
                             {{ isArrivage }},
                             {{ arrivageId ?? receptionId }},
                             {{ disputeId }},
                             '{{ disputeNumber }}'
                             )">
                    <i class='fas fa-pencil-alt'></i>
                </div>
            {% endif %}

            {% if hasRight(constant('App\\Entity\\Menu::QUALI'), constant('App\\Entity\\Action::DELETE')) %}
                <div onclick="deleteRow($(this), $('#modalDeleteLitige'), $('#submitDeleteLitige'))"
                     class="dropdown-item"
                     data-id='{{ disputeId }}' data-target='#modalDeleteLitige' data-toggle='modal'>
                        <i class='fas fa-trash mr-2'></i>Supprimer
                </div>
            {% endif %}
        </div>
    </div>
</div>
