<!-- Modale Ajout d'article -->
<div method="" class="modal fade" id="modalPickArticle" role="dialog" aria-labelledby="modalAddArticleTitle"
     aria-hidden="true" data-collecte-id="{{ collecte.id }}">
    <div class="modal-dialog  modal-xl" role="document">
        <div class="modal-content">
            {% include 'utils/modal/header.html.twig' with {
                title: "Choix d'article pour la référence"
            } %}

            <div class="modal-body modal-input container-fluid">
                <form class="row">
                    {% if collecte.demandeCollecte.isStock %}
                        <div class="form-group mt-2 col-12">
                            <input name="referenceArticle" hidden class="data">
                            <label for="article-to-pick">Code article (laisser vide pour créer un nouvel article)</label>
                            <select class="form-control data w-100" id="article-to-pick" name="article-to-pick"
                                    data-s2="collectableArticles" data-include-params="input[name=referenceArticle]">
                            </select>
                        </div>
                    {% endif %}
                    <div class="form-group col-12 mb-3">
                        <label class="wii-field-name" for="quantity">Quantité à collecter</label>
                        <input class="form-control data needed" type="number" min=1 name="quantity-to-pick" max="">
                    </div>
                </form>
            </div>
            <div class="error-msg"></div>
            <div class="modal-footer">
                <div class="btn btn-outline-secondary" data-dismiss="modal">Annuler</div>
                <button id="submitNewArticle"
                        name="collecte"
                        value="{{collecte.id}}"
                        type="button"
                        class="btn data btn-success">
                    Ajouter
                </button>
            </div>
        </div>
    </div>
</div>
