<!-- Modale Ajout d'article -->
<div class="modal fade" id="modalPickArticle" role="dialog" aria-labelledby="modalAddArticleTitle"
     aria-hidden="true" data-collecte-id="{{ collecte.id }}">
    <div class="modal-dialog  modal-xl" role="document">
        <div class="modal-content">
            {% include 'utils/modal/header.html.twig' with {
                title: "Choix d'article pour la référence"
            } %}

            <div class="modal-body modal-input container-fluid">
                <form class="row">
                    {% if collecte.demandeCollecte.isStock %}
                        <div class="form-group mt-2 col-12">
                            <input name="referenceArticle" hidden class="data">
                            <label for="article-to-pick" class="wii-field-name">Code article (laisser vide pour créer un nouvel article)</label>
                            <select class="form-control data w-100" id="article-to-pick" name="article-to-pick"
                                    data-s2="collectableArticles" data-include-params="input[name=referenceArticle]">
                            </select>
                        </div>
                    {% endif %}
                    <div class="form-group col-12 mb-3">
                        <label class="wii-field-name" for="quantity">Quantité à collecter</label>
                        <input class="form-control data needed" type="number" min=1 name="quantity-to-pick" max="">
                    </div>
                </form>
            </div>
            {% include 'utils/modal/footer.html.twig' with {
                elements: [
                    {classes: 'btn btn-outline-secondary', dismiss: true, text: 'Annuler'},
                    {classes: 'btn btn-success data', text: 'Ajouter', value: collecte.id, name: 'collecte', id: 'submitNewArticle'},
                ],
            } %}

        </div>
    </div>
</div>
