{% extends 'layout.html.twig' %}

{% block title %}Ordre | Collecte | Details{% endblock %}
{% block titleLink path('ordre_collecte_index') %}

{% block page_content %}
    <div class="m-4">
        <div class="row">
            <div class="col-12">
                <div class="zone-entete">
                    {% include 'ordre_collecte/ordre-collecte-show-header.html.twig' with {
                        showDetails: detailsConfig,
                        collecte: collecte,
                        titleLogo: collecte.pairings|length>=1 ? 'pairing' : null,
                        titleLogoTooltip: "Cette collecte est liée à un capteur"
                    } %}
                </div>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-12">
                <div class="wii-box mt-0">
                    <div class="header wii-title">Liste des articles</div>
                    <div class="content">
                        <table id="tableArticle" class="table w-100"></table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <input id="collecte-id" hidden value="{{ collecte.id }}">
    <input id="tagTemplates" value="{{ tag_templates|json_encode }}" hidden>

    {% include 'ordre_collecte/modalEditArticle.html.twig' %}
    {% include 'reference_article/modalShowRefArticle.html.twig' %}
    {% include 'article/modalShowArticle.html.twig' %}
    {% include 'ordre_collecte/modalDeleteOrdreCollecte.html.twig' %}
    {% include 'ordre_collecte/modalFinishCollecte.html.twig' %}
    {% include 'ordre_collecte/modalNewSensorPairing.html.twig' %}
    {% include 'ordre_collecte/modalAddArticle.html.twig' %}

{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('collect-order-show') }}
{% endblock %}
