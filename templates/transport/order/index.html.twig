{% extends 'layout.html.twig' %}

{% block title %}Ordre | Transport{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('transport-order-index') }}
{% endblock %}

{% block page_filter %}
    {% include 'filters/filtersTransportRequests.html.twig' with {
        page: 'PAGE_TRANSPORT_ORDERS',
        tableSelector: '#tableTransportOrders',
        marginClass: 'm-0 m-md-4',
    } %}
{% endblock %}

{% set hasRightToExport = hasRight(constant('App\\Entity\\Menu::ORDRE'), constant('App\\Entity\\Action::EXPORT')) %}

{% block page_content %}
    <div class="m-0 m-md-4 wii-page-card transport-table">
        <table id="tableTransportOrders" class="table w-100"></table>
    </div>
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('transport-order-index') }}
{% endblock %}
