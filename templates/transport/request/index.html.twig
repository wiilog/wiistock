{% extends 'layout.html.twig' %}

{% block title %}Demande | Transport{% endblock %}

{% block page_filter %}
    {% include 'filters/filtersTransportRequests.html.twig' with {
        page: 'PAGE_TRANSPORT_REQUESTS',
        tableSelector: '#tableTransportRequests'
    } %}
{% endblock %}

{% set hasRightToExport = hasRight(constant('App\\Entity\\Menu::DEM'), constant('App\\Entity\\Action::EXPORT')) %}

{% block page_content %}
    <div class="m-4 wii-page-card">
        <div class="row wii-page-card-header">
            <div class="col-auto ml-auto btn-group">
                {% if hasRightToExport %}
                    <button type="button"
                            class="btn btn-primary split-button"
                            onclick="saveExportFile('export_dispatches_csv')">
                        <i class="fa fa-file-csv mr-2" style="padding: 0 2px"></i>
                        Exporter au format CSV
                    </button>
                {% endif %}
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <table id="tableTransportRequests" class="table w-100"></table>
            </div>
        </div>
    </div>

    {% include 'transport/request/new.html.twig' %}
{% endblock %}


{% block javascripts %}
    {{ parent() }}
{% endblock %}
