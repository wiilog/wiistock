{% set isCanceledStatus = transportRequest.status.nom in constant('App\\Entity\\Transport\\TransportRequest::CANCELED_STATUSES') %}
{% set path = app.request is not null ? app.request.getSchemeAndHttpHost() : app_url %}
{% set both = transportRequest.collect is not null %}

{% if transportDeliveryRequestLines is not empty and transportDeliveryRequestLines %}
    {% if both %}
        <div class="d-flex align-items-center ml-3 py-2">
            <img src="{{ asset('svg/delivery.svg') }}" alt="Icône livraison" width="25px" height="25px">
            <span class="ml-2">Livraison</span>
        </div>
    {% endif %}
    {% for line in transportDeliveryRequestLines %}
        <div class="pack-wrapper {{ loop.last ? 'pb-4' : 'pb-2' }}">
            {% set packsCount = (associatedNaturesAndPacks[line.nature.label] ?? [])|length %}
            <div class="nature-line w-100 d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center ml-2">
                    {% set logo = transportRequest.type.logo ?? null %}
                    {% if logo %}
                        <img src="{{ path ~ asset('uploads/attachements/' ~ logo.fileName) }}">
                    {% endif %}
                    <span class="ml-2"><strong class="wii-field-name">{{ line.nature.label }}</strong></span>
                </div>
                <span><strong class="wii-field-name">Quantité :</strong> {{ packsCount > 0 ? packsCount : '-' }}</span>
                <span><strong class="wii-field-name">Température</strong> : {{ line.temperatureRange ? line.temperatureRange.value : '-' }}°C</span>
            </div>
            {% if packsCount > 0 %}
                <div class="packs-table">
                    <table class="w-100">
                        <tr>
                            <th class="wii-field-name">Code étiquette</th>
                            <th class="wii-field-name">Ecarté</th>
                            <th class="wii-field-name">Motif écartement</th>
                            {% if isCanceledStatus %}<th class="wii-field-name">Retourné le</th>{% endif %}
                        </tr>
                        {% for transportDeliveryOrderPack in associatedNaturesAndPacks[line.nature.label] ?? [] %}
                            <tr>
                                <td class="wii-field-text">{{ transportDeliveryOrderPack.pack.code }}</td>
                                <td class="wii-field-text">{{ transportDeliveryOrderPack.rejected ? 'Oui' : '-' }}</td>
                                <td class="wii-field-text">{{ transportDeliveryOrderPack.rejectReason ?? '-' }}</td>
                                {% if isCanceledStatus %}
                                    <td class="wii-field-text">{{ transportDeliveryOrderPack.returnedAt
                                            ? transportDeliveryOrderPack.returnedAt|format_helper('longDate', true, true)
                                            : '-'
                                        }}
                                    </td>
                                {% endif %}
                            </tr>
                        {% endfor %}
                    </table>
                </div>
            {% endif %}
        </div>
    {% endfor %}
{% endif %}

{% if transportCollectRequestLines is not empty and transportCollectRequestLines %}
    {% if both %}
        <div class="d-flex align-items-center ml-3 py-2">
            <img src="{{ asset('svg/collect.svg') }}" alt="Icône collecte" width="25px" height="25px">
            <span class="ml-2">Collecte</span>
        </div>
    {% endif %}
    {% for line in transportCollectRequestLines %}
        <div class="pack-wrapper {{ loop.last ? 'pb-4' : 'pb-2' }}">
            <div class="nature-line w-100 d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center ml-2">
                    {% set logo = transportRequest.collect.type.logo ?? null %}
                    {% if logo %}
                        <img src="{{ path ~ asset('uploads/attachements/' ~ logo.fileName) }}">
                    {% endif %}
                    <span class="ml-2"><strong class="wii-field-name">{{ line.nature.label }}</strong></span>
                </div>
                <span><strong class="wii-field-name">Quantité à collecter :</strong> {{ line.quantityToCollect }}</span>
                <span><strong class="wii-field-name">Quantité collectée</strong> : {{ line.collectedQuantity }}</span>
            </div>
        </div>
    {% endfor %}
{% endif %}
