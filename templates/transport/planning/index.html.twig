{% extends 'layout.html.twig' %}

{% block title %}Ordre | Planning{% endblock %}
{% block titleLink path('transport_planning_index') %}


{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('transport-order-planning') }}
{% endblock %}

{% block page_content %}
    {% include 'transport/round/transport_round.html.twig' %}
    <div class="m-0 m-md-4 p-4 wii-page-card">
        <div class="d-flex">
            <div>
                <button class="btn btn-outline-primary today-date mr-0" tabindex="0">
                    Aujourd'hui
                </button>
            </div>
            <div class="mx-3">
                <button class="btn btn-outline-primary decrement-date mr-0" tabindex="0">
                    <img src="{{ asset('svg/arrow.svg') }}"  style="transform:rotate(180deg);" alt="Icône left arrow" width="15px">
                </button>
                <button class="btn btn-outline-primary increment-date" tabindex="0">
                    <img src="{{ asset('svg/arrow.svg') }}" alt="Icône right arrow" width="15px">
                </button>
            </div>
            <div class="planning-switch mx-4">
                <div class="to-assign">
                    <input type="checkbox" id="to-assign" name="to-assign" class="to-assign" value="to-assign"/>
                    <label for="to-assign">
                            <span class="d-inline-flex align-items-center">
                                &Agrave; affecter
                            </span>
                    </label>
                </div>
                <div class="assigned">
                    <input type="checkbox" id="assigned" name="assigned" class="assigned" value="assigned"/>
                    <label for="assigned">
                            <span class="d-inline-flex align-items-center">
                                Affectée
                            </span>
                    </label>
                </div>
                <div class="ongoing">
                    <input type="checkbox" id="ongoing" name="ongoing" class="ongoing" value="ongoing"/>
                    <label for="ongoing">
                            <span class="d-inline-flex align-items-center">
                                En cours
                            </span>
                    </label>
                </div>
            </div>
            {% set planRound = hasRight(constant('App\\Entity\\Menu::ORDRE'), constant('App\\Entity\\Action::SCHEDULE_TRANSPORT_ROUND')) %}
            {% if planRound %}
            <button class="btn btn-primary ml-auto plan-round-button" tabindex="0">
                <img src="{{ asset('svg/delivery-white.svg') }}" alt="Icône tournéé" width="15px">
                <span>Planifier une tournée</span>
            </button>
            {% endif %}
        </div>
        <div class="row d-flex planning-container">

        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('transport-order-planning') }}
{% endblock %}
