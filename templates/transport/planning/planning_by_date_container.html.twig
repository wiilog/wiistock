{% for i in 0..1 %}
    <div class="col-md-6 col-12 h-100">
        <div class="wii-box border border-bottom-0">
            <div class="header">
                <input type="hidden" value="{{ dateForContainer }}" class="date-container">
                <span class="wii-title">{{ dateForContainer | date_modify("+#{i}days") | format_helper('longDate', {short: false, time: false, year: false}) }}</span>
            </div>
            <div class="wii-box mt-0 ">
                <div class="col-12 d-flex px-0">
                    <div class="col-6 px-0 pr-1">
                        <div class="planning-card-container border-right border-bottom">
                            <div class="type-header">
                                <img src="{{ asset('svg/delivery.svg') }}" alt="Ic么ne livraison" width="15px">
                                <span class="wii-field-name ml-2">
                                    {{ deliveryAndCollectCount[dateForContainer | date_modify("+#{i}days") | date('Y-m-d')]['delivery'] ?? 0 }} Livraison
                                </span>
                                <div class="mx-2 d-flex">
                                    {% if typesCount[dateForContainer | date_modify("+#{i}days") | date('Y-m-d')]['delivery'] is defined %}
                                        {% for typeId,typeLabel in typesCount[dateForContainer | date_modify("+#{i}days") | date('Y-m-d')]['delivery'] %}
                                            <div class="ml-3">
                                                <span class="wii-body-text mr-1">{{ typeLabel }}</span>
                                                {% if typeIdToFullPath[typeId] is defined %}
                                                    <img src="{{ typeIdToFullPath[typeId] }}" alt="Ic么ne livraison" width="15px">
                                                {% endif %}
                                            </div>
                                        {% endfor %}
                                    {% endif %}
                                </div>
                            </div>
                            <div class="bottom-border">
                                <div class="card-container">
                                    {% for transportOrder in transportOrders[dateForContainer | date_modify("+#{i}days") | date('Y-m-d') ] %}
                                        {% if transportOrder is not empty and transportOrder.request is instanceof('App\\Entity\\Transport\\TransportDeliveryRequest') %}
                                            {% include 'transport/planning/planning_card.html.twig' with {
                                                'order': transportOrder
                                            } %}
                                        {% endif %}
                                    {% endfor %}
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="col-6 px-0 pl-1">
                        <div class="border-left border-bottom planning-card-container ">
                            <div class="type-header">
                                <img src="{{ asset('svg/collect.svg') }}" alt="Ic么ne collecte" width="15px">
                                <span class="wii-field-name ml-2">
                                    {{ deliveryAndCollectCount[dateForContainer | date_modify("+#{i}days") | date('Y-m-d')]['collect'] }} Collecte
                                </span>
                                <div class="mx-2 d-flex">
                                    {% if typesCount[dateForContainer | date_modify("+#{i}days") | date('Y-m-d')]['collect'] is defined %}
                                        {% for typeId,typeLabel in typesCount[dateForContainer | date_modify("+#{i}days") | date('Y-m-d')]['collect'] %}
                                            <div class="ml-3">
                                                <span class="wii-body-text mr-1">{{ typeLabel }}</span>
                                                {% if typeIdToFullPath[typeId] is defined %}
                                                    <img src="{{ typeIdToFullPath[typeId] }}" alt="Ic么ne livraison" width="15px">
                                                {% endif %}
                                            </div>
                                        {% endfor %}
                                    {% endif %}
                                </div>
                            </div>
                            <div class="bottom-border">
                                <div class="card-container">
                                    {% for transportOrder in transportOrders[dateForContainer | date_modify("+#{i}days") | date('Y-m-d') ] %}
                                        {% if transportOrder is not empty and transportOrder.request is instanceof('App\\Entity\\Transport\\TransportCollectRequest') %}
                                            {% include 'transport/planning/planning_card.html.twig' with {
                                                'order': transportOrder
                                            } %}
                                        {% endif %}
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endfor %}
