<form>
    <div class="row">
        <div class="form-group col-12">
            <label class="wii-field-name">Numéro groupe</label>
            <input type="text" class="form-control" value="{{ group.code }}" readonly/>
        </div>
        <div class="form-group col-md-6 col-12">
            <label class="wii-field-name" title="Nature de colis">{{ 'natures.Nature de colis'|trans }}*</label>
            <select class="form-control data needed"
                    name="nature"
                    title="{{ 'natures.Nature de colis'|trans }}">
                <option value>{{ 'natures.Sélectionner une nature'|trans }}</option>
                {% set packNatureId = group.nature is not null ? group.nature.id : null %}
                {% for nature in natures %}
                    <option value="{{ nature.id }}" {{ packNatureId == nature.id ? 'selected' }}>{{ nature.label }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="form-group col-md-6 col-12">
            <label class="wii-field-name">Nombre colis</label>
            <input type="number" class="form-control" value="{{ group.children | length }}" readonly/>
        </div>
        <div class="form-group col-md-6 col-12">
            <label class="wii-field-name">Poids (kg)</label>
            <input class="form-control data" value="{{ group.weight }}" name="weight"/>
        </div>
        <div class="form-group col-md-6 col-12">
            <label class="wii-field-name">Volume (m3)</label>
            <input class="form-control data" value="{{ group.volume }}" name="volume"/>
        </div>
        <div class="col-12">
            <label class="wii-field-name" for="commentaire">Commentaire</label>
            <input id="commentaire"
                   class="form-control data"
                   name="comment"
                   type="hidden"
                   value="{{ group.comment }}">
            <div class="editor-container-edit" data-wysiwyg>{{ group.comment | raw }}</div>
        </div>
    </div>
</form>
