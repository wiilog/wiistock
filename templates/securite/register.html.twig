{% extends 'securite/unique-form-layout.html.twig' %}

{% block title %}Créer un compte{% endblock %}

{% block body %}
    {{ parent() }}

    {% for flashMessage in app.session.flashbag.get('success') %}
        {% if flashMessage is defined %}
            {% include 'utils/alert.html.twig' with {
                id: ('alert-success-' ~ loop.index),
                content: flashMessage,
                color: 'success'
            } %}
        {% endif %}
    {% endfor %}
    <div class="container-fluid">
        <div class="main-form-wrapper mt-3">
            <div class="row">
                <div class="box-login wii-page-card">
                    <div class="login-header">
                        Créer un compte
                    </div>
                    <div class="form-signin">
                        {{ form_start(form, {'attr': {'autofocus' : true, 'class': 'removeRequired'} }) }}
                        {{ form_row(form.username) }}
                        {{ form_row(form.email) }}
                        {{ form_row(form.plainPassword) }}

                        <div class="d-flex justify-content-between">
                            <a class="btn btn-secondary" href="{{ url('login') }}">Retour connexion</a>
                            <button class="btn btn-primary float-left" type="submit">Enregistrer</button>
                        </div>
                        {{ form_row(form._token) }}
                        {{ form_end(form, {'render_rest' : false}) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
