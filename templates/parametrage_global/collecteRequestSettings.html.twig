<a data-toggle="collapse" href="#collecteRequestSettings" role="button" aria-expanded="false"
   aria-controls="collecteRequestSettings" class="col-12 mb-4">
    <h1 class="btn btn-primary m-0 w-100 border-radius-light">Configuration demande de collecte
        <i class="fas fa-arrow-alt-circle-down ml-2"></i></h1>
</a>
<div class="collapse col-12" id="collecteRequestSettings">
    <div class="row mt-2 mb-2">
        <div class="col-12">
            {% set checked = (collecteLocationDropdown == 1) ? 'checked' : '' %}
            <label class="switch">
                <input type="checkbox" class="checkbox col-3" {{ checked }} name="param-location-by-type-demande-livraison"
                       data-param="{{ constant('App\\Entity\\ParametrageGlobal::MANAGE_LOCATION_COLLECTE_DROPDOWN_LIST') }}"
                       onchange="updateToggledParam($(this))">
                <span class="slider round"></span>
            </label>
            <label class="pl-1" for="param-manage-collecte-location">Gérer le champ "Destination" en liste déroulante</label>
        </div>
    </div>
</div>
