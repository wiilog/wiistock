<a data-toggle="collapse" href="#deliveryRequestSettings" role="button" aria-expanded="false"
   aria-controls="deliveryRequestSettings" class="col-12 mb-4">
    <h1 class="btn btn-primary m-0 w-100 border-radius-light">Configuration demande de livraison
        <i class="fas fa-arrow-alt-circle-down ml-2"></i></h1>
</a>

<div class="collapse col-12" id="deliveryRequestSettings">
    <div class="row">
        <div class="col-12">
            {% set checked = (DLAfterRecep == 1) ? 'checked' : '' %}
            <label class="switch">
                <input type="checkbox" class="checkbox col-3" {{ checked }} name="param-create-demande-livraison"
                       data-param="{{ constant('App\\Entity\\ParametrageGlobal::CREATE_DL_AFTER_RECEPTION') }}"
                       onchange="updateToggledParam($(this))">
                <span class="slider round"></span>
            </label>
            <label class="pl-1" for="param-create-demande-livraison">Créer une demande de livraison après
                réception</label>
        </div>
    </div>
    <div class="row mt-2 mb-2">
        <div class="col-12">
            {% set checked = (prepaAfterDl == 1) ? 'checked' : '' %}
            <label class="switch">
                <input type="checkbox" class="checkbox col-3" {{ checked }} name="param-create-prepa"
                       data-param="{{ constant('App\\Entity\\ParametrageGlobal::CREATE_PREPA_AFTER_DL') }}"
                       onchange="updateToggledParam($(this))">
                <span class="slider round"></span>
            </label>
            <label class="pl-1" for="param-create-prepa">Créer une préparation après demande de livraison</label>
        </div>
    </div>
    <div class="row mt-2 mb-2">
        <div class="col-12">
            {% set checked = (paramDemandeurLivraison == 1) ? 'checked' : '' %}
            <label class="switch">
                <input type="checkbox" class="checkbox col-3" {{ checked }} name="param-demandeur-livraison"
                       data-param="{{ constant('App\\Entity\\ParametrageGlobal::DEMANDEUR_DANS_DL') }}"
                       onchange="updateToggledParam($(this))">
                <span class="slider round"></span>
            </label>
            <label class="pl-1" for="param-demandeur-livraison">Le demandeur est l'utilisateur de la session en cours</label>
        </div>
    </div>
    <div class="float-right btn btn-success" onclick="updateDeliveryRequestDefaultLocations()">
        <i class='fas fa-check'></i>
    </div>
    <div class="row mt-2">
        <div class="ml-3 my-3">Emplacements de livraison par défaut</div>
    </div>
    <div class="row setting-type-association">
    </div>
    <div class="form-group col-1">
        <button class="btn btn-primary new-type-association-button"
              onclick="newTypeAssociation($(this))" disabled>
              <i class="fa fa-plus"></i>
        </button>
    </div>
    <template id="type-template">
        <div class="d-flex col-10 mb-3 type-association-container">
            <div class="d-flex align-items-center w-50">
                <label class="mr-2">Type</label>
                <select name="deliveryRequestType" class="form-control w-50 needed"
                        onchange="onTypeChange($(this))">
                </select>
            </div>
            <div class="d-flex align-items-center w-50">
                <label class="mr-2">Emplacement</label>
                <select name="deliveryRequestLocation" class="form-control ajax-autocomplete-location w-50">
                </select>
            </div>
        </div>
        <div class="btn btn-danger delete-logo" title="Supprimer la ligne" style="max-height: 40px" onclick="removeAssociationLine($(this));">
            <i class="fas fa-trash-alt"></i>
        </div>
    </template>
    <input type="hidden" value="{{ deliveryTypeSettings }}" name="deliveryTypeSettings">
</div>
