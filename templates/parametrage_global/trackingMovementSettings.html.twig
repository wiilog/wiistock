<a data-toggle="collapse" href="#trackingMovementSettings" role="button" aria-expanded="false"
   aria-controls="trackingMovementSettings" class="col-12 mb-4">
    <h1 class="btn btn-primary m-0 w-100 border-radius-light">
        Paramétrage mouvements traça
        <i class="fas fa-arrow-alt-circle-down ml-2"></i>
    </h1>
</a>
<div class="collapse col-12" id="trackingMovementSettings">
    <div class="row p-3">
        {% set checked = (redirectMvtTraca ? 'checked' : '') %}
        <label class="switch">
            <input type="checkbox"
                   class="checkbox col-3"
                   {{ checked }}
                   name="param-create-demande-livraison"
                   data-param="{{ constant('App\\Entity\\Setting::CLOSE_AND_CLEAR_AFTER_NEW_MVT') }}"
                   onchange="updateToggledParam($(this))">
            <span class="slider round"></span>
        </label>
        <label class="pl-1" for="param-create-demande-livraison">Vider et rester sur la modale de création de mouvement</label>
    </div>
</div>
