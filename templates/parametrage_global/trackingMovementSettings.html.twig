<a data-toggle="collapse" href="#trackingMovementSettings" role="button" aria-expanded="false"
   aria-controls="trackingMovementSettings" class="col-12 mb-4">
    <h1 class="btn btn-primary m-0 w-100 border-radius-light">
        Paramétrage mouvements traça
        <i class="fas fa-arrow-alt-circle-down ml-2"></i>
    </h1>
</a>
<div class="collapse col-12" id="trackingMovementSettings">
    <div class="row">
        {% set checked = (redirectMvtTraca ? 'checked' : '') %}
        <div class="col-12 my-2">
            <label class="switch">
                <input type="checkbox"
                       class="checkbox"
                       {{ checked }}
                       name="param-create-demande-livraison"
                       data-param="{{ constant('App\\Entity\\Setting::CLOSE_AND_CLEAR_AFTER_NEW_MVT') }}"
                       onchange="updateToggledParam($(this))">
                <span class="slider round"></span>
            </label>
            <label class="pl-1" for="param-create-demande-livraison">Vider et rester sur la modale de création de mouvement</label>
        </div>
        <div class="col-12 my-2">
            {% set checked = (sendPackDeliveryRemind ? 'checked' : '') %}
            <label class="switch">
                <input type="checkbox" class="checkbox col-3" {{ checked }} name="param-send-pack-delivery-remind"
                       data-param="{{ constant('App\\Entity\\Setting::SEND_PACK_DELIVERY_REMIND') }}"
                       onchange="updateToggledParam($(this))">
                <span class="slider round"></span>
            </label>
            <label class="pl-1" for="param-send-pack-delivery-remind">
                Déclencher un email de relance si les colis restent plus de 15 jours sur un point de livraison
            </label>
        </div>
        <div class="col-12 my-2">
            <button class="btn btn-outline-primary" onclick="triggerReminderEmails($(this))">Déclencher les mails de relance</button>
        </div>
    </div>
</div>
