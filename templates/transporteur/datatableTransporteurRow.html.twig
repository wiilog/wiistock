<div class="d-flex">
    <div class="dropdown dropright {{ not hasRight(constant('App\\Entity\\Menu::REFERENTIEL'), constant('App\\Entity\\Action::DELETE')) ? 'd-none' }}">
        {% include 'datatable/dotsRow.html.twig' %}
        <div class="dropdown-menu dropdown-follow-gt pointer">
            {% if hasRight(constant('App\\Entity\\Menu::REFERENTIEL'), constant('App\\Entity\\Action::EDIT')) %}
                <div data-id='{{ transporteur.id }}' data-target='#modalEditTransporteur' data-toggle='modal'
                     class='d-none action-on-click'
                     onclick="editRow($(this), Routing.generate('transporteur_edit_api', true), $('#modalEditTransporteur'), $('#submitEditTransporteur'))">
                    <i class='fas fa-pencil-alt'></i>
                </div>
            {% endif %}
            {% if hasRight(constant('App\\Entity\\Menu::REFERENTIEL'), constant('App\\Entity\\Action::DELETE')) %}
                <div data-id='{{ transporteur.id }}' data-target='#modalDeleteTransporteur' data-toggle='modal'
                     onclick="deleteRow($(this), $('#modalDeleteTransporteur'), $('#submitDeleteTransporteur'))"
                     class="dropdown-item">
                    <i class='fas fa-trash mr-2'></i>Supprimer
                </div>
            {% endif %}
        </div>
    </div>
</div>
