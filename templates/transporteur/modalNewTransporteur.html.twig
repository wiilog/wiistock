<form method="" class="modal fade" id="modalNewTransporteur" role="dialog"
      aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            {% include 'utils/modal/header.html.twig' with {
                title: "Nouveau transporteur"
            } %}

            <div class="modal-body modal-input container-fluid">
                <div class="form-group">
                    <label class="wii-field-name" for="label">Nom*</label>
                    <input type="text" id="label" class="form-control data needed" name="label" maxlength="64">
                </div>

                <div class="form-group">
                    <label class="wii-field-name" for="code">Code*</label>
                    <input type="text" id="code" class="form-control data needed" name="code" maxlength="64">
                </div>
            </div>
            {% include 'utils/modal/footer.html.twig' with {
                elements: [
                    {classes: 'btn btn-outline-secondary', dismiss: true, text: 'Annuler'},
                    {classes: 'btn btn-success', text: 'Enregistrer', id: 'submitNewTransporteur'}
                ],
            } %}

        </div>
    </div>
</form>
