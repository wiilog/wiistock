<div class="d-flex">
    <div class="dropdown dropright">
        <div class="d-flex">
            {% include "utils/action-buttons.html.twig" with {
                noButton: true,
                actions: [
                    {
                        title: trans('Général', '', 'Modale', 'Détails', false),
                        icon: "fas fa-eye",
                        attributes: {
                            "data-id": mvt.id,
                            "data-target": "#modalShowMvtTraca",
                            "data-toggle": "modal",
                            "onclick": "showRow($(this), Routing.generate('mvt_traca_show', true), $('#modalShowMvtTraca'))",
                        },
                    },
                    {
                        hasRight: hasRight(constant('App\\Entity\\Menu::TRACA'), constant('App\\Entity\\Action::EDIT')),
                        title: trans('Général', '', 'Modale', 'Modifier', false),
                        icon: "fas fa-pencil-alt",
                        class: "d-none action-on-click",
                        attributes: {
                            "data-id": mvt.id,
                            "data-target": "#modalEditMvtTraca",
                            "data-toggle": "modal",
                            "onclick": "editRow($(this), Routing.generate('tracking_movement_api_edit', true), $('#modalEditMvtTraca'), $('#submitEditMvtTraca'), false, initDatePickers)",
                        },
                    },
                    {
                        hasRight: hasRight(constant('App\\Entity\\Menu::TRACA'), constant('App\\Entity\\Action::DELETE')),
                        title : trans('Général', '', 'Modale', 'Supprimer', false),
                        icon : "wii-icon wii-icon-trash-black",
                        attributes: {
                            "data-id": mvt.id,
                            "data-target": "#modalDeleteMvtTraca",
                            "data-toggle": "modal",
                            "onclick": "deleteRow($(this), $('#modalDeleteMvtTraca'), $('#submitDeleteMvtTraca'))",
                        },
                    }
                ]
            } %}

            {% if attachmentsLength > 0 %}
                {% include 'datatable/paperclip.html.twig' with {
                    mvt: mvt.id,
                    attachmentsLength: attachmentsLength
                } %}
            {% endif %}

        </div>
    </div>
</div>


