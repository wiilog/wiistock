<div class="row">
    <div class="form-group col-6">
        <label class="wii-field-name">Date</label>
        <input disabled type="text" class="form-control" value="{{ mvt.datetime|date('d/m/Y H:i') }}">
    </div>

    <div class="form-group col-6">
        <label class="wii-field-name">Opérateur</label>
        <input disabled type="text" class="form-control" value="{{ mvt.operateur ? mvt.operateur.username : '' }}">
    </div>

    <div class="form-group col-6">
        {% set pack = mvt.pack %}
        {% set code = pack ? pack.code %}
        <label title="Colis" class="wii-field-name">{{"mouvement de traçabilité.Colis"|trans}}</label>
        <input disabled type="text" class="form-control" value="{{ code }}">
    </div>

    <div class="form-group col-6">
        <label class="wii-field-name">Action</label>
        <input disabled type="text" class="form-control" value="{{ mvt.type.nom }}">
    </div>

    <div class="form-group col-12 w-100">
        <label class="my-auto mr-2 wii-field-name">Emplacement</label>
        <input disabled type="text" class="form-control" value="{{ mvt.emplacement ? mvt.emplacement.label }}">
    </div>
</div>

<div class="row">
    <div class="form-group col-12 h-fit-content">
        <label class="wii-field-name">Commentaire</label>
        <div class="input disabled comment"> {{ mvt.commentaire|raw }}
        </div>
    </div>
    <div class="form-group col-12">
        {% for attachment in attachments %}
            {% include 'attachment/attachmentLine.html.twig' with {
                attachment: attachment,
                canRemove: false,
                'editAttachments': false,
            }%}
        {% endfor %}
    </div>
</div>
