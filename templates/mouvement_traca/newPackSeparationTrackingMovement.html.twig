{% import "form.html.twig" as form %}

<div class="form-mass-mvt-container row">
    <div class="form-group col-12">
        {{ form.input("pack", trans('Traçabilité', "Mouvements", 'Unité logistique'), true, null, {
            onChange: "onPackCodeChange($(this))",
        }) }}
    </div>
    <div class="form-group col-12">
        {{ form.select("emplacement", "Emplacement de dépose", true, {
            type: "location",
        }) }}
    </div>

    {% for nature in natures %}
        <div class="form-group col-6"
             data-multiple-key="quantities"
             data-multiple-object-index="{{ loop.index }}">

            {{ form.hidden("natureId", nature.id) }}
            {{ form.input("counter", nature.label, true, 0, {
                type: "number",
                min: 0,
                step: 0,
                inputClass: "needs-default",
                attributes: {
                    "data-init": 0,
                },
            }) }}
        </div>
    {% endfor %}

    {{ form.hidden("is-separation", 1, {
        noClear: true,
    }) }}
</div>
