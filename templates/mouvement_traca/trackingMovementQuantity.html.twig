{% set value = quantity is defined ? quantity : 1 %}
{% set containerClass = containerClass is defined ? containerClass %}
<div class="form-group col-12 {{ containerClass }}">
    <label>Quantité*</label>
    <input type="number"
           name="quantity"
           title="Quantité"
           min="1"
           step="1"
           value="{{ value }}"
           data-init="{{ value }}"
           class="form-control data needed needs-default"/>
</div>
