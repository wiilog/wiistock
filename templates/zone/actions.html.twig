<div class="d-flex">
    {% include "utils/action-buttons/dropdown.html.twig" with {
        actions: [
            {
                title: "",
                actionOnClick: true,
                attributes: {
                    "data-id": zone.id,
                    "data-target": "#modalEditZone",
                    "data-toggle": "modal",
                    "onclick": "editRow($(this), Routing.generate('zone_edit_api', true), $('#modalEditZone'), $('#submitEditZone'), false, () => editZone("~zone.id~"))",
                },
                hasRight: hasRight(constant('App\\Entity\\Menu::REFERENTIEL'), constant('App\\Entity\\Action::EDIT'))
            },
            {
                title: "Supprimer",
                icon: "wii-icon wii-icon-trash-black",
                attributes: {
                    "data-id": zone.id,
                    "data-target": "#modalDeleteZone",
                    "data-toggle": "modal",
                    "onclick": "deleteZone("~zone.id~")",
                },
                hasRight: hasRight(constant('App\\Entity\\Menu::REFERENTIEL'), constant('App\\Entity\\Action::DELETE'))
            }
        ]
    } %}
</div>
