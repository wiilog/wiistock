{% import 'form.html.twig' as form %}

<div class="form-group">
    {{ form.input('name', 'Code Zone', true, zone.name) }}
</div>

<div class="form-group">
    {{ form.textarea('description', 'Description', true, zone.description, {}) }}
</div>

<div class="form-group">
    {{ form.number('inventoryIndicator', "Indicateur d'inventaire sur emplacement RFID", false, zone.inventoryIndicator, {
        type: 'number',
        min: 0,
        max: 100,
        step: 0.1
    } ) }}
</div>

<div class="form-group">
    {{ form.switch('active', 'Satut', true, [
        {label: 'Actif', value: '1', checked: zone.active ? true : zone.active == 0 ? false : true },
        {label: 'Inactif', value: '0', checked: zone.active == 0 ? true : false },
    ]) }}
</div>
