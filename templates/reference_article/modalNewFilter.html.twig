<div class="modal fade" id="modalNewFilter" tabindex="-1" role="dialog" aria-labelledby="modalNewFilterLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            {% include 'utils/modal/header.html.twig' with {
                title: "Ajout d'un filtre"
            } %}

            <div class="modal-body">
                <div class="form-group">
                    <label for="field">Champ</label>
                    <select class="form-control data needed" id="field" name="field" onchange="displayFilterValue($(this))">
                        <option disabled selected> </option>
                        {% for field in fields|sort((a,b) => a.title <=> b.title) %}
                            {% if field.name not in ['actions', 'comment', 'image'] %}
                                <option value="{{ field.name }}" data-type="{{ field.type }}">{{ field.title }}</option>
                            {% endif %}
                        {% endfor %}
                    </select>
                </div>

                <div class="form-group">
                    <label for="value" class="valueLabel"></label>
                    <div class="input-group">

                    </div>
                </div>

            </div>
            <div class="error-msg"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Annuler</button>
                <button type="button" class="btn btn-success" id="submitNewFilter">Appliquer</button>
            </div>
        </div>
    </div>
</div>
