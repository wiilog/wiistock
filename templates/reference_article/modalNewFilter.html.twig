<div class="modal fade" id="modalNewFilter" tabindex="-1" role="dialog" aria-labelledby="modalNewFilterLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalNewFilterLabel">Ajout d'un filtre</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="field">Champ</label>
                    <select class="form-control data needed" id="field" name="field" onchange="displayFilterValue($(this))">
                        <option disabled selected> </option>
                        {% for champ in champs %}
                            {% if (champ.label != 'Actions' and champ.label != 'Commentaire' and champ.label !='Statut') %}
                                {% set value = (champ.id == 0) ? champ.label : champ.id %}
                                <option value="{{ value }}" data-type="{{ champ.typage }}">{{ champ.label|capitalize }}</option>
                            {% endif %}
                        {% endfor %}
                    </select>
                </div>

                <div class="form-group">
                    <label for="value" class="valueLabel">Contient</label>
                    <div class="input-group">
                        <input type="text" class="form-control data needed" id="value" name="value"/>
                    </div>
                </div>

