<div class="row">
    <div class="form-group col-6  mb-3">
        <label for="libelle">Libellé</label>
        <input class="form-control data" type="text" name="libelle" id="libelle">
    </div>
    <div class="form-group col-6 w-100 mb-3">
        <label for="">Référence fournisseur</label>
        <select class="data form-control" id="articleForunisseur" name="articleFournisseur">
            {% for articleForunisseur in articlesFournisseurs %}
            <option value="{{articleForunisseur.id}}">{{articleForunisseur.label}}</option>
            {% endfor %}
        </select>
    </div>
    <div class="form-group col-4  mb-3">
        <label for="" >Quantité en stock</label>
        <input id="stock" type="text" class="form-control data" name="stock">
    </div>
    <div class="form-group col-4  mb-3">
        <label for="" >Quantité reçue</label>
        <input type="number" class="form-control data" name="quantite" id="quantite" min=0>
    </div>
    <div class="form-group col-4">
        <label>Anomalie</label>
        <label class="switch">
            <input class="checkbox" type="checkbox" name="anomalie">
            <span class="slider round"></span>
        </label>
    </div>
</div>
<div class="form-group col-6">
    <label>Commentaire</label>
    <input id='commentaireID' class="form-control data" name="commentaire" type="hidden">
    <div class="editor-container" data-wysiwyg></div>
</div>
