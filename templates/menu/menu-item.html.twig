{% set isLink = url is defined %}
{% if isLink %}
    <a class="dropdown-item"
       {{ isExtern is defined and isExtern ? 'target="_blank"' }}
       href="{{ url }}">
{% endif %}

    {% set showArrow = showArrow is defined and showArrow %}
    {% if (arrowPlaceholder is defined and arrowPlaceholder)
          or showArrow %}
        <span class="mr-5 arrow-container user-select-none">
            {% if showArrow %}
                <i class="fas fa-chevron-left"></i>
            {% endif %}
        </span>
    {% endif %}

    {% if (iconPlaceholder is defined and iconPlaceholder)
        or (icon is defined and icon is not empty)  %}
        <span class="icon-container user-select-none">
            {% if icon is defined and icon is not empty %}
                <span class="wii-icon wii-icon-{{ icon }}"></span>
            {% endif %}
        </span>
    {% endif %}

    {% if label is iterable %}
        <span class="label user-select-none" title="{{ label | last }}">{{ trans(label[0] ?? null,label[1] ?? null, label[2] ?? null, label[3] ?? null) }}</span>
    {% else %}
        <span class="label user-select-none">{{ label }}</span>
    {% endif %}

{% if isLink %}
    </a>
{% endif %}
