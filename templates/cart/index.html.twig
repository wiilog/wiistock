{% import 'form.html.twig' as form %}

{% extends 'layout.html.twig' %}

{% block title %}Panier{% endblock %}

{% block page_content %}
    <div class="d-flex justify-content-center align-items-center" style="margin-bottom: 50px;">
        <div class="row wii-form wii-large-column">
            <div class="col-12 col-md-4">
                <div class="wii-box">
                    <div class="header wii-title">Demande</div>
                    <div class="content">
                        {{ form.switch('requestType', 'Type de demande', false, [
                            {label: {wiiIcon: 'cart-delivery', text: 'Livraison'}, value: 1},
                            {label: {wiiIcon: 'cart-collect', text: 'Collecte'}, value: 2},
                            {label: {wiiIcon: 'cart-purchase', text: 'Achat'}, value: 3},
                        ]) }}

                        {{ form.radio('addOrCreate', 'Ajouter à une de mes demandes en brouillon', false, 'add') }}
                        {{ form.radio('addOrCreate', 'Créer une nouvelle demande', false, 'create') }}

                        <div class="existing-delivery d-none">
                            <div class="my-delivery-requests">
                                <div class="section">Ma demande de livraison</div>
                                <label for="delivery-request" title="delivery-request">
                                    Mes livraisons
                                </label>
                                <select class="form-control data needed w-100" name="delivery-request"
                                        onchange="onDeliveryChanged($(this), true)" data-placeholder="- ">
                                    <option value="-">-</option>
                                    {% for deliveryRequest in deliveryRequests %}
                                        <option value="{{ deliveryRequest.id }}">
                                            {{ deliveryRequest.number }} -
                                            {{ deliveryRequest.type }} -
                                            {{ deliveryRequest.destination }} - Créée le
                                            {{ deliveryRequest.creationDate }}
                                        </option>
                                    {% endfor %}
                                </select>
                                {% for deliveryRequest in deliveryRequests %}
                                    <input type="hidden" id="{{ deliveryRequest.id }}" value="{{ deliveryRequest.comment }}"/>
                                {% endfor %}


                            </div>
                            <div class="delivery-request-content d-none">
                                <div class="comment">
                                    <span class="comment-title">Commentaire</span>
                                </div>

                                <div class="delivery-references">
                                    <span class="references-title">Références présentes dans la demande</span>
                                    <table id="tableDeliveryReferences" class="table"></table>
                                </div>
                            </div>
                        </div>

                        <div class="create-delivery d-none">
                            <div class="section">Ma nouvelle demande de livraison</div>

                        </div>

                        <div class="existing-collect d-none">
                            <div class="my-collect-requests">
                                <div class="section">Ma demande de collecte</div>
                            </div>
                            <div class="collect-request-content d-none">
                                <div class="comment">
                                    <span class="comment-title">Commentaire</span>
                                    le commentaire !!
                                </div>
                            </div>
                        </div>

                        <div class="create-collect d-none">
                            <div class="section">Ma nouvelle demande de collecte</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-8">
                <div class="wii-box">
                    <div class="header wii-title">Références</div>
                    <div class="content">
                    </div>
                </div>
                <button class="btn btn-success float-right mt-3" onclick="validateCart()">
                    Valider mon panier
                </button>
            </div>
        </div>
    </div>

    <input type="hidden" value="{{ app.user.cart.references | length }}" id="cart-refs-count"/>
    {% include 'cart/modalAddToRequest.html.twig' %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/pages/cart.js') }}?v={{ web_version }}"></script>
{% endblock %}
