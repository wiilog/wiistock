{% for line in lines %}
    {% set logisticsUnit = line.pack ?? null %}
    {% include 'pack/utils/packItemListTemplate.html.twig' with {
        header: logisticsUnit
            ? {
                data: {
                    'pack-id': logisticsUnit.packId,
                },
                sideLabel: logisticsUnit.nature,
                color: logisticsUnit.color,
                content: [
                    {label: 'Unité logistique', value: logisticsUnit.code, bold: 'value'},
                    {label: 'Emplacement', value: logisticsUnit.location, bold: 'label'},
                    {label: 'Nombre d\'articles demandé', value: line.articles|length ~ '/' ~ logisticsUnit.quantityArticleInLocation, bold: 'label'}
                ]
            }
            : null,
        content: line.articles,
        action: logisticsUnit
            ? {
                icon: 'wii-icon wii-icon-trash-black',
                datatarget: "#modalDeleteArticle",
                onclick: "removeLogisticUnitRow(" ~ logisticsUnit.packId ~ ", 'unit')",
            }
    } %}
{% endfor %}
