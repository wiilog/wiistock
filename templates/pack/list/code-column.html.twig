<div class="logistic-unit-number d-flex align-items-center">
    <span>{{ pack.code }}</span>
    {% if pack.isGroup %}
        <span class="fa fa-object-group ml-1" title="cette ul est un groupe"></span>
    {% endif %}
    {% if pack.splitTargets is not empty %}
        <span class="fa fa-arrows-split-up-and-left ml-1" title="Cette UL a été divisé"></span>
    {% endif %}
</div>
