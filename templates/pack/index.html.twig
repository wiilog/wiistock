{% extends 'layout.html.twig' %}

{% block title %}Traçabilité | Colis{% endblock %}

{% block page_filter %}
    {% include 'filters/filtersPack.html.twig' with {
        'page' : 'PAGE_PACK',
        'tableSelector' : '#packTable'
    } %}
{% endblock %}

{% block page_content %}
    <input type="hidden" id="packNatureTranslation" value="{{ 'natures.Nature de colis' | trans }}"/>
    <input type="hidden" id="packCodeTranslation" value="{{ 'colis.Numéro colis' | trans }}"/>
    {% set hasRightExport = hasRight(constant('App\\Entity\\Menu::TRACA'), constant('App\\Entity\\Action::EXPORT')) %}
    <div class="m-4 wii-page-card">
        {% if hasRightExport %}
            <div class="row wii-page-card-header">
                <div class="col-auto ml-auto">
                    <div class="btn-group">
                        <button type="button"
                                class="btn btn-primary btn-ripple"
                                onclick="saveExportFile('print_csv_packs')">
                            <i class="fa fa-file-csv mr-2"></i>
                            Exporter au format CSV
                        </button>
                    </div>
                </div>
            </div>
        {% endif %}
        <div class="row">
            <div class="col-12">
                <table id="packsTable" class="table w-100"></table>
            </div>
        </div>
    </div>
    {% include 'pack/modalEditPack.html.twig' %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/pack.js') }}?{{ date().timestamp }}"></script>
{% endblock %}
