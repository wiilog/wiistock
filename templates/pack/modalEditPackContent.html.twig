<form>
    <div class="row">
        <div class="form-group col-12">
            <label title="Numéro colis">{{"colis.Numéro colis"|trans}}</label>
            <input type="text"
                   class="form-control"
                   value="{{ pack.code }}"
                   title="{{"colis.Numéro colis"|trans}}"
                   disabled/>
        </div>
        <div class="form-group col-md-6 col-12">
            <label title="Nature de colis">{{ 'natures.Nature de colis'|trans }}*</label>
            <select class="form-control data needed"
                    name="nature"
                    title="{{ 'natures.Nature de colis'|trans }}">
                <option value>{{ 'natures.Sélectionner une nature'|trans }}</option>
                {% set packNatureId = pack.nature is not null ? pack.nature.id : null %}
                {% for nature in natures %}
                    <option value="{{ nature.id }}" {{ packNatureId == nature.id ? 'selected' }}>{{ nature.label }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="form-group col-md-6 col-12">
            <label>Quantité</label>
            <input type="number"
                   class="form-control data needed"
                   value="{{ pack.quantity }}"
                   name="quantity"
                   min="1"
                   step="1"
                   title="Quantité"/>
        </div>
        <div class="form-group col-md-6 col-12">
            <label>Poids (kg)</label>
            <input class="form-control data"
                   value="{{ pack.weight }}"
                   name="weight"
                   title="Poids"/>
        </div>
        <div class="form-group col-md-6 col-12">
            <label>Volume (m3)</label>
            <input class="form-control data"
                   value="{{ pack.volume }}"
                   name="volume"
                   title="Volume"/>
        </div>
        <div class="col-12">
            <label for="commentaire">Commentaire</label>
            <input id="commentaire"
                   class="form-control data"
                   name="comment"
                   type="hidden"
                   value="{{ pack.comment }}">
            <div class="editor-container-edit" data-wysiwyg>{{ pack.comment|raw }}</div>
        </div>
        <div class="col-12 mt-3">
            <label>Historique de groupage</label>
            <table id="groupHistoryTable" class="table w-100"></table>
        </div>
    </div>
</form>
