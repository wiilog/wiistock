<form>
    <div class="row">
        <div class="form-group col-12">
            <label class="wii-field-name" title="Numéro colis">{{ trans('Traçabilité', 'Unités logistiques', 'Onglet "Unités logistiques"', 'Numéro d\'UL') }}</label>
            <input type="text"
                   class="form-control"
                   value="{{ pack.code }}"
                   title="{{ trans('Traçabilité', 'Unités logistiques', 'Onglet "Unités logistiques"', 'Numéro d\'UL') }}"
                   disabled/>
        </div>
        <div class="form-group col-md-6 col-12">
            <label class="wii-field-name" title="Nature de colis">{{ trans('Traçabilité', 'Unités logistiques', 'Onglet "Unités logistiques"', 'Nature d\'unité logistique') }}*</label>
            <select class="form-control data needed"
                    name="nature"
                    title="{{ trans('Traçabilité', 'Unités logistiques', 'Onglet "Unités logistiques"', 'Nature d\'unité logistique') }}">
                <option value>{{ trans('Référentiel', 'Natures', 'Sélectionner une nature', false) }}</option>
                {% set packNatureId = pack.nature is not null ? pack.nature.id : null %}
                {% for nature in natures %}
                    <option value="{{ nature.id }}" {{ packNatureId == nature.id ? 'selected' }}>{{ nature.label }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="form-group col-md-6 col-12">
            <label class="wii-field-name">{{ trans('Traçabilité', 'Unités logistiques', 'Onglet "Unités logistiques"', 'Quantité') }}</label>
            <input type="number"
                   class="form-control data needed"
                   value="{{ pack.quantity }}"
                   name="quantity"
                   min="1"
                   step="1"
                   title="{{ trans('Traçabilité', 'Unités logistiques', 'Onglet "Unités logistiques"', 'Quantité') }}"/>
        </div>
        <div class="form-group col-md-6 col-12">
            <label class="wii-field-name">{{ trans('Traçabilité', 'Unités logistiques', 'Onglet "Unités logistiques"', 'Poids (kg)') }}</label>
            <input class="form-control data"
                   value="{{ pack.weight }}"
                   name="weight"
                   title="{{ trans('Traçabilité', 'Unités logistiques', 'Onglet "Unités logistiques"', 'Poids (kg)') }}"/>
        </div>
        <div class="form-group col-md-6 col-12">
            <label class="wii-field-name">{{ trans('Traçabilité', 'Unités logistiques', 'Onglet "Unités logistiques"', 'Volume (m3)') }}</label>
            <input class="form-control data"
                   value="{{ pack.volume }}"
                   name="volume"
                   title="{{ trans('Traçabilité', 'Unités logistiques', 'Onglet "Unités logistiques"', 'Volume (m3)') }}"/>
        </div>
        <div class="col-12">
            <label class="wii-field-name" for="commentaire">{{ trans('Général', null, 'Modale', 'commentaire') }}</label>
            <input id="commentaire"
                   class="form-control data"
                   name="comment"
                   type="hidden"
                   value="{{ pack.comment }}">
            <div class="editor-container-edit" data-wysiwyg>{{ pack.comment|raw }}</div>
        </div>
        <div class="col-12 mt-3">
            <div class="wii-section-title my-3 d-flex align-items-center">
                {{ trans('Traçabilité', 'Unités logistiques', 'Onglet "Unités logistiques"', 'Historique de groupage') }}
            </div>
            <table id="groupHistoryTable" class="table w-100"></table>
        </div>
    </div>
</form>
