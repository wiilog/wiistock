{% set articles = pack.childArticles | length %}

{% if articles or pack.isArticleContainer %}
    {% set plural = articles > 1 ? 's' %}
    <span class="logistic-unit-number" data-id="{{ pack.id }}" data-pack="{{ pack.code }}">
        <span class="d-flex align-items-center">
            <div class="mt-1">{{ pack.code }}</div>
        </span>
     </span>
{% else %}
    {{ pack.code }}
    {{ not pack.children.empty ? '<span class="fa fa-object-group ml-1" title="cette ul est un groupe"></span>' }}
    {{ pack.splitFrom ? ('<span class="fa fa-arrows-split-up-and-left ml-1" title="ul issu de la division de ' ~ pack.splitFrom.from.code | escape('html') ~ '"></span>' ) | raw}}
{% endif %}

