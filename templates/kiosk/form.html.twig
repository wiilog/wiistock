{% extends 'kiosk/layout.thml.twig' %}

{% block title %} Borne | Formulaire {% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('kiosk') }}
{% endblock %}

{% block page_content %}
    <div style="display: flex; justify-content: center">
        <div class="form-header">

        </div>
        <div class="form-content">
            <div class="timeline-container" style="height: 200px;">
                <span>Référence</span>
                <span>Demandeur et suiveur</span>
                <span>Autres informations</span>
                <span>Article</span>
                <span>Récapitulatif</span>
            </div>
            <div class="entry-stock-container">
                <div class="reference-container">
                    <div class="d-flex justify-content-center">
                        <label class="w-100 mr-3">Référence<input type="search" class="w-100 reference-ref-input" value="{{ reference.reference }}" autofocus></label>
                        <label class="w-100 ml-3">Libellé<input type="search" class="w-100 reference-label-input" value="{{ reference.libelle }}"></label>
                    </div>
                </div>
                <div class="manager-container d-none"></div>
                <div class="other-informations-container d-none"></div>
                <div class="article-container d-none"></div>
                <div class="summary-container d-none"></div>
                <div class="d-flex flex-row-reverse mt-4">
                    <button class="button-next">
                        Suivant
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="corner position-absolute left-0 bottom-0 p-4">
        <button class="outline">
           Retour
        </button>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('kiosk') }}
{% endblock %}
