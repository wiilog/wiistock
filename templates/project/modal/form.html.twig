{% import 'form.html.twig' as form %}

<div class="row">
    <div class="form-group col-12">
        {{ form.input('code', 'Code', true, project.code) }}
    </div>

    <div class="form-group col-12">
        {{ form.input('description', 'Description', false, project.description) }}
    </div>

    <div class="form-group col-12">
        {% set selected = project.projectManager ? [{
            value: project.projectManager.id,
            label: project.projectManager.username,
            selected: true,
        }] : null %}

        {{ form.select('projectManager', 'Chef de projet', true, {
            type: 'user',
            placeholder: 'SÃ©lectionnez un utilisateur',
            items: selected,
        }) }}
    </div>

    <div class="form-group col-12">
        {{ form.checkbox('isActive', 'Actif', false, project.active, {
            inputClass: 'needs-default',
            attributes: {'data-init': true}
        }) }}
    </div>
</div>
