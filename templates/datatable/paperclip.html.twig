{% set nbAttachmentsPlural = attachmentsLength > 1 ? 's' %}
<a class="link-like d-flex ml-3 has-tooltip "
   title="{{ attachmentsLength }} piece{{ nbAttachmentsPlural }} jointe{{ nbAttachmentsPlural }}"
    {% if reference is defined %}
        href="{{ path('reference_article_show_page', {id: reference}) }}"
    {% endif %}
    {% if mvt is defined %}
        data-id='{{ mvt }}'
        data-target='#modalShowMvtTraca'
        data-toggle='modal'
        onclick="showRow($(this), Routing.generate('mvt_traca_show', true), $('#modalShowMvtTraca'))"
    {% endif %}
>
    <div>
        <img class="mt-1" src="{{ asset('svg/paperclip.svg') }}" alt="Paperclip" height="16px" width="16px" border="0"/>
    </div>
</a>
