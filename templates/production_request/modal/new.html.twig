{% import 'form.html.twig' as form %}

<div class="modal fade"
     id="modalNewProductionRequest"
     role="dialog"
     aria-hidden="true"
     data-modal-type="new">
    <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
        <div class="modal-content">
            {% include 'utils/modal/header.html.twig' with {
                title: "Nouvelle demande de production"
            } %}

            <div class="modal-body modal-input container-fluid">
                {{ form.hidden('quantityToGenerate', 1) }}
                {% include 'production_request/modal/form.html.twig' with {
                    productionRequest,
                    fieldsParam,
                    emergencies,
                    expectedAtSettings,
                }%}
            </div>

            {% include 'utils/modal/footer.html.twig' with {
                elements: [
                    {classes: 'btn btn-outline-secondary', dismiss: true, text: 'Annuler'},
                    {classes: 'btn btn-success data', text: 'Enregistrer', type: 'submit', id: 'submitNewProductionRequest'}
                ],
            } %}

        </div>
    </div>
</div>
