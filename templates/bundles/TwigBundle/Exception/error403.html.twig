{% extends 'layout.html.twig' %}

{% block pageContainerClass 'd-flex justify-content-center align-items-center h-100' %}
{% block title %}Accès refusé{% endblock %}

{% block page_content %}
    <div class="text-center">
        <i class="fas fa-question-circle fa-7x"></i>
        <h1 class="main-title">Vous n'êtes pas autorisé à accéder à cette page</h1>

        <strong>Erreur 403</strong>
        <p>La page à laquelle vous souhaitez accéder requiert des droits dont vous ne disposez pas.</p>
        <p class="mt-3 btn btn-primary">
            <a href="{{ path('app_index') }}">Retour à l'accueil</a>
        </p>
    </div>
{% endblock %}
