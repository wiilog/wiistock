<div class="d-flex">
    <div class="dropdown dropright {{ not hasRight(constant('App\\Entity\\Menu::REFERENTIEL'), constant('App\\Entity\\Action::DELETE')) ? 'd-none' }}">
        {% include 'datatable/dotsRow.html.twig' %}
        <div class="dropdown-menu dropdown-follow-gt pointer">
            {% if hasRight(constant('App\\Entity\\Menu::REFERENTIEL'), constant('App\\Entity\\Action::EDIT')) %}
                <div class="d-none">
                    <div class="action-on-click"
                         data-id='{{ supplierId }}'
                         data-target='#modalEditFournisseur'
                         data-toggle='modal'
                         onclick="editRow($(this), Routing.generate('supplier_api_edit', true), $('#modalEditFournisseur'), $('#submitEditFournisseur'))">
                        <i class='fas fa-pencil-alt '></i>
                    </div>
                </div>
            {% endif %}
            {% if hasRight(constant('App\\Entity\\Menu::REFERENTIEL'), constant('App\\Entity\\Action::DELETE')) %}
                <div>
                    <div class="dropdown-item d-flex align-items-center"
                         onclick="checkAndDeleteRow($(this), '#modalDeleteFournisseur', 'supplier_check_delete', '#submitDeleteFournisseur')"
                         data-id='{{ supplierId }}'
                         data-target='#modalDeleteFournisseur'
                         data-toggle='modal'>
                        <span class="wii-icon wii-icon-trash-black mr-2"></span>
                        Supprimer
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>
