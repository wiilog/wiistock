<div class="form-group">
    <label class="wii-field-name">Nom*</label>
    <input type="text" class="form-control data needed" name="name" value="{{ supplier.nom }}">
</div>

<div class="form-group">
    <label class="wii-field-name">Code de référence*</label>
    <input type="text" class="form-control data needed" name="code" value="{{ supplier.codeReference }}">
</div>

<div class="row">
    <div class="col-6 d-flex align-items-center">
        <input class="checkbox data" type="checkbox" name="possibleCustoms" {{ supplier.possibleCustoms ? 'checked' }}>
        <span class="font-size-mini pointer ml-2"
              onclick="$(this).closest('div').find('.checkbox').click();">Possible douane</span>
    </div>
    <div class="col-6 d-flex align-items-center">
        <input class="checkbox data" type="checkbox" name="urgent" {{ supplier.urgent ? 'checked' }}>
        <span class="font-size-mini pointer ml-2"
              onclick="$(this).closest('div').find('.checkbox').click();">Urgent</span>
    </div>
</div>
