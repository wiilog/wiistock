<div class="d-flex">
    <div class="dropdown dropright">
        {{ include('datatable/dotsRow.html.twig') }}
        <div class="dropdown-menu dropdown-follow-wiilog pointer">
            {% if hasRight(constant('App\\Entity\\Menu::PARAM'), constant('App\\Entity\\Action::EDIT')) %}
                <div class="dropdown-item"
                     data-toggle="modal"
                     data-target="#modalEditAlertTemplate"
                     data-id="{{ alert_template.id }}"
                     onclick="editRow($(this), Routing.generate('alert_template_edit_api', true),
                     $('#modalEditAlertTemplate'), $('#modalEditAlertTemplate').find('.submit-button'), false, () => {
                         updateImagePreview('#preview-mail-image', '#upload-mail-image');
                     })">
                    <i class='fas fa-edit mr-2'></i>Modifier
                </div>
            {% endif %}
            {% if hasRight(constant('App\\Entity\\Menu::PARAM'), constant('App\\Entity\\Action::DELETE')) %}
                <div class="dropdown-item d-flex align-items-center"
                     data-id="{{ alert_template.id }}"
                     onclick="deleteAlertTemplate($(this))">
                    <span class="wii-icon wii-icon-trash-black mr-2"></span>Supprimer
                </div>
            {% endif %}
        </div>
    </div>
</div>
