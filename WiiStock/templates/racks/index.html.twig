{% extends 'base.html.twig' %}

{% block title %}Racks index{% endblock %}

{% block body %}
    <h1>Racks index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rack in racks %}
            <tr>
                <td>{{ rack.id }}</td>
                <td>{{ rack.nom }}</td>
                <td>
                    <a href="{{ path('racks_show', {'id': rack.id}) }}">show</a>
                    <a href="{{ path('racks_edit', {'id': rack.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('racks_new') }}">Create new</a>
{% endblock %}