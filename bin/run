#!/usr/bin/env php
<?php

echo "Starting cron" . PHP_EOL;

exec("mkdir -p /project/var/log");
exec("printf '* * * * * echo -e \"%s\\t%s\\n\" 2>> /project/var/log/cron.log\n' '$(date)' '$(php /project/bin/console cron:run)' > /tmp/crontabwiistock.txt && crontab /tmp/crontabwiistock.txt && rm /tmp/crontabwiistock.txt");
exec("crond -d 0");
