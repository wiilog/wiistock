#!/usr/bin/env php
<?php

const CRONTAB_TMP_FILE = "/tmp/crontabwiistock.txt";
const CRON_LOG_DIR = "/project/var/log";

main();



///////////////////////////////////////////
////////// function declarations //////////
///////////////////////////////////////////


function main(): void {
    global $argv;

    $mode = $argv[1] ?? null;

    echo("Starting instance in " . $mode . " mode" . PHP_EOL);

    // check if the script is launched by command line
    if (!isset($argv)) {
        return;
    }

    switch ($mode) {
        // mode lite without cron & supervisor
        case 'cypress':
            echo("Starting ssh daemon" . PHP_EOL);
            exec("/usr/sbin/sshd -D > /dev/null &");


            echo("exporting environment variables" . PHP_EOL);
            exec("rm /etc/environment");
            exec("env > /etc/environment");


            echo("fixing environment variables" . PHP_EOL);
            // exec("sed -i 's/^\([^#]*=[^"].*\)$/\1"/; s/=\([^"].*\)$/="\1/' /etc/environment");
            echo("sed -i 's/^\([^#]*=[^".'""'."].*\)$/\1".'""'."/; s/=\([^".'""'."].*\)$/=".'""'."\1/' /etc/environment");
            exec("sed -i 's/^\([^#]*=[^".'""'."].*\)$/\1".'""'."/; s/=\([^".'""'."].*\)$/=".'""'."\1/' /etc/environment");

            echo("starting lite mode" . PHP_EOL);
            $argv[1] = 'lite';
            main();
        case 'lite':
            // never end this script
            passthru("php-fpm --allow-to-run-as-root");
            break;

        // default mode with cron & supervisor
        default:
            launchCronDaemon();
            launchSupervisorDaemon();
            break;
    }

    echo "Starting instance successfully" . PHP_EOL;
}


function launchCronDaemon(): void {
    // create log dir if not exist
    @mkdir(CRON_LOG_DIR);

    // save bin/console cron:run in crontab
    $crontabContent = sprintf("* * * * * echo -e \"%s\\t%s\\n\" 2>> /project/var/log/cron.log\n", "$(date)", "$(php /project/bin/console cron:run)");
    file_put_contents(CRONTAB_TMP_FILE, $crontabContent);
    exec("crontab " . CRONTAB_TMP_FILE);
    @unlink(CRONTAB_TMP_FILE);

    // Launch cron daemon
    exec("crond -d 0");
}

// be careful to launch everything before calling this function
// otherwise it will fail. This function normally should never end
function launchSupervisorDaemon(): void {
    passthru("supervisord -n --configuration /project/supervisord.conf --pidfile /tmp/supervisord.pid");
}
