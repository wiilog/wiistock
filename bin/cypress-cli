#!/bin/sh

set -e

docker compose -f ../../docker-compose.cypress.yaml up wiistock-php wiistock-nginx mysql owasp-modsecurity -d --build
docker exec --user www-data cypress_wiistock-php yarn install
docker exec --user www-data cypress_wiistock-php composer install
docker exec --user www-data cypress_wiistock-php yarn build:only:dev
docker compose -f ../../docker-compose.cypress.yaml up cypress --abort-on-container-exit
